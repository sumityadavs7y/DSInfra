<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Farmer Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <%- include('../../partials/page-header', { 
        title: 'Create Farmer Payment', 
        icon: 'bi-plus-circle', 
        backUrl: '/farmer/payments', 
        actionUrl: null, 
        actionText: null, 
        actionIcon: null
    }) %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <% if (error) { %>
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> <%= error %>
                        </div>
                        <% } %>

                        <form method="POST" action="/farmer/payments/create">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="projectId" class="form-label">Project <span class="text-danger">*</span></label>
                                    <select class="form-select <%= errors.projectId ? 'is-invalid' : '' %>" 
                                            id="projectId" name="projectId" required>
                                        <option value="">Select Project</option>
                                        <% projects.forEach(project => { %>
                                        <option value="<%= project.id %>" <%= payment.projectId == project.id ? 'selected' : '' %>>
                                            <%= project.name %>
                                        </option>
                                        <% }) %>
                                    </select>
                                    <% if (errors.projectId) { %>
                                    <div class="invalid-feedback"><%= errors.projectId.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label for="date" class="form-label">Date <span class="text-danger">*</span></label>
                                    <input type="date" class="form-control <%= errors.date ? 'is-invalid' : '' %>" 
                                           id="date" name="date" value="<%= payment.date || new Date().toISOString().split('T')[0] %>" required>
                                    <% if (errors.date) { %>
                                    <div class="invalid-feedback"><%= errors.date.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label for="amount" class="form-label">Amount <span class="text-danger">*</span></label>
                                    <input type="number" step="0.01" class="form-control <%= errors.amount ? 'is-invalid' : '' %>" 
                                           id="amount" name="amount" value="<%= payment.amount || '' %>" required>
                                    <% if (errors.amount) { %>
                                    <div class="invalid-feedback"><%= errors.amount.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label for="givenBy" class="form-label">Given By <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control <%= errors.givenBy ? 'is-invalid' : '' %>" 
                                           id="givenBy" name="givenBy" value="<%= payment.givenBy || '' %>" required>
                                    <% if (errors.givenBy) { %>
                                    <div class="invalid-feedback"><%= errors.givenBy.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label for="receivedTo" class="form-label">Received To <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control <%= errors.receivedTo ? 'is-invalid' : '' %>" 
                                           id="receivedTo" name="receivedTo" value="<%= payment.receivedTo || '' %>" required>
                                    <% if (errors.receivedTo) { %>
                                    <div class="invalid-feedback"><%= errors.receivedTo.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12">
                                    <label for="mode" class="form-label">Mode <span class="text-danger">*</span></label>
                                    <select class="form-select <%= errors.mode ? 'is-invalid' : '' %>" 
                                            id="mode" name="mode" required>
                                        <option value="">Select Payment Mode</option>
                                        <option value="Cash" <%= payment.mode === 'Cash' ? 'selected' : '' %>>Cash</option>
                                        <option value="Cheque" <%= payment.mode === 'Cheque' ? 'selected' : '' %>>Cheque</option>
                                        <option value="Online Transfer" <%= payment.mode === 'Online Transfer' ? 'selected' : '' %>>Online Transfer</option>
                                        <option value="UPI" <%= payment.mode === 'UPI' ? 'selected' : '' %>>UPI</option>
                                        <option value="Card" <%= payment.mode === 'Card' ? 'selected' : '' %>>Card</option>
                                        <option value="NEFT/RTGS" <%= payment.mode === 'NEFT/RTGS' ? 'selected' : '' %>>NEFT/RTGS</option>
                                        <option value="IMPS" <%= payment.mode === 'IMPS' ? 'selected' : '' %>>IMPS</option>
                                    </select>
                                    <% if (errors.mode) { %>
                                    <div class="invalid-feedback"><%= errors.mode.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12">
                                    <label for="remarks" class="form-label">Remarks</label>
                                    <textarea class="form-control" id="remarks" name="remarks" rows="3"><%= payment.remarks || '' %></textarea>
                                </div>
                            </div>

                            <div class="d-flex gap-2 justify-content-end mt-4">
                                <a href="/farmer/payments" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Create Payment
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
