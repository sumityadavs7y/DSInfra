<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Management</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-light">
    <!-- Header -->
    <%- include('../partials/page-header', { 
        title: 'Farmer Management',
        icon: 'bi-flower2',
        isDashboard: true,
        userName: userName,
        userRole: userRole
    }) %>

    <div class="container my-4">
        <!-- Welcome Section -->
        <div class="card border-0 shadow-sm mb-4 animate-fade-in-up">
            <div class="card-body p-4">
                <h2 class="h3 mb-2">
                    <i class="bi bi-flower2 text-success"></i> 
                    Farmer Management
                </h2>
                <% if (userRole === 'farmer') { %>
                <p class="text-muted mb-0">View your farmer projects, payments, and registries.</p>
                <% } else { %>
                <p class="text-muted mb-0">Manage farmer projects, payments, and registries.</p>
                <% } %>
            </div>
        </div>

        <!-- Quick Access Cards -->
        <div class="row g-4 mb-4">
            <div class="col-12 col-md-4">
                <a href="/farmer/projects" class="text-decoration-none">
                    <div class="card border-0 shadow-sm border-start border-success border-4 stat-card animate-fade-in-up h-100" style="animation-delay: 0.1s">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-folder fs-1 text-success"></i>
                            <h4 class="mt-3 mb-2">Projects</h4>
                            <p class="text-muted small mb-0">Manage farmer projects</p>
                            <div class="mt-3">
                                <span class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-arrow-right"></i> View Projects
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            
            <div class="col-12 col-md-4">
                <a href="/farmer/payments" class="text-decoration-none">
                    <div class="card border-0 shadow-sm border-start border-primary border-4 stat-card animate-fade-in-up h-100" style="animation-delay: 0.2s">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-cash-stack fs-1 text-primary"></i>
                            <h4 class="mt-3 mb-2">Payments</h4>
                            <p class="text-muted small mb-0">Track payment transactions</p>
                            <div class="mt-3">
                                <span class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-arrow-right"></i> View Payments
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            
            <div class="col-12 col-md-4">
                <a href="/farmer/registries" class="text-decoration-none">
                    <div class="card border-0 shadow-sm border-start border-warning border-4 stat-card animate-fade-in-up h-100" style="animation-delay: 0.3s">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-file-earmark-text fs-1 text-warning"></i>
                            <h4 class="mt-3 mb-2">Registries</h4>
                            <p class="text-muted small mb-0">Manage registry records</p>
                            <div class="mt-3">
                                <span class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-arrow-right"></i> View Registries
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Quick Actions -->
        <% if (userRole !== 'associate' && userRole !== 'team_leader' && userRole !== 'farmer') { %>
        <div class="card border-0 shadow-sm animate-fade-in-up" style="animation-delay: 0.4s">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <a href="/farmer/projects/create" class="btn btn-outline-success w-100">
                            <i class="bi bi-plus-circle"></i> New Project
                        </a>
                    </div>
                    <div class="col-12 col-md-4">
                        <a href="/farmer/payments/create" class="btn btn-outline-primary w-100">
                            <i class="bi bi-plus-circle"></i> New Payment
                        </a>
                    </div>
                    <div class="col-12 col-md-4">
                        <a href="/farmer/registries/create" class="btn btn-outline-warning w-100">
                            <i class="bi bi-plus-circle"></i> New Registry
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

