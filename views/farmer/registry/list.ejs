<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Registries</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <%- include('../../partials/page-header', { 
        title: 'Farmer Registries', 
        icon: 'bi-file-earmark-text', 
        backUrl: '/farmer', 
        actionUrl: userRole !== 'farmer' ? '/farmer/registries/create' + (projectId ? '?projectId=' + projectId : '') : '', 
        actionText: 'New Registry', 
        actionIcon: 'bi-plus-circle'
    }) %>

    <div class="container my-4">
        <!-- Show/Hide Deleted Toggle -->
        <% if (userRole !== 'farmer') { %>
        <div class="mb-3">
            <% if (showDeleted) { %>
                <a href="/farmer/registries?projectId=<%= projectId %>" class="btn btn-outline-danger">
                    <i class="bi bi-eye-slash"></i> Hide Deleted
                </a>
            <% } else { %>
                <a href="/farmer/registries?projectId=<%= projectId %>&showDeleted=true" class="btn btn-outline-secondary">
                    <i class="bi bi-trash"></i> Show Deleted
                </a>
            <% } %>
        </div>
        <% } %>

        <!-- Search & Filter -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/farmer/registries" method="GET" class="row g-3">
                    <input type="hidden" name="showDeleted" value="<%= showDeleted ? 'true' : '' %>">
                    
                    <div class="col-12 col-md-3">
                        <label class="form-label small">Project Filter</label>
                        <select class="form-select" name="projectId">
                            <option value="">All Projects</option>
                            <% projects.forEach(project => { %>
                            <option value="<%= project.id %>" <%= projectId == project.id ? 'selected' : '' %>>
                                <%= project.name %>
                            </option>
                            <% }) %>
                        </select>
                    </div>

                                    <div class="col-12 col-md-3">
                                        <label class="form-label small">Search</label>
                                        <input type="text" class="form-control" placeholder="Name / Plot / Registry done by" 
                                               name="search" value="<%= search || '' %>">
                                    </div>

                    <div class="col-12 col-md-2">
                        <label class="form-label small">Start Date</label>
                        <input type="date" class="form-control" name="startDate" value="<%= startDate %>">
                    </div>

                    <div class="col-12 col-md-2">
                        <label class="form-label small">End Date</label>
                        <input type="date" class="form-control" name="endDate" value="<%= endDate %>">
                    </div>

                    <div class="col-12 col-md-2 d-flex align-items-end">
                        <div class="d-flex gap-2 w-100">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="bi bi-search"></i> Search
                            </button>
                            <% if (search || projectId || startDate || endDate) { %>
                            <a href="/farmer/registries" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i>
                            </a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Total Summary -->
        <div class="row mb-4">
            <div class="col-12 col-md-4">
                <div class="card border-0 shadow-sm bg-primary text-white">
                    <div class="card-body">
                        <h6 class="mb-0">Total Registries</h6>
                        <h4 class="mb-0"><%= registries.length %></h4>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card border-0 shadow-sm bg-warning text-white">
                    <div class="card-body">
                        <h6 class="mb-0">Total Area</h6>
                        <h4 class="mb-0"><%= totals.area.toLocaleString('en-IN', { minimumFractionDigits: 2 }) %></h4>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card border-0 shadow-sm bg-danger text-white">
                    <div class="card-body">
                        <h6 class="mb-0">Total Amount</h6>
                        <h4 class="mb-0">₹<%= totals.total.toLocaleString('en-IN', { minimumFractionDigits: 2 }) %></h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- Registries Table -->
        <% if (registries.length === 0) { %>
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-file-earmark-text fs-1 text-muted"></i>
                <p class="text-muted mt-3">No registries found</p>
                <% if (userRole !== 'associate' && userRole !== 'farmer') { %>
                <a href="/farmer/registries/create<%= projectId ? '?projectId=' + projectId : '' %>" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create First Registry
                </a>
                <% } %>
            </div>
        </div>
        <% } else { %>
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>S.No.</th>
                            <th>Project</th>
                            <th>Name</th>
                            <th>Plot Number</th>
                            <th>Registry Done By</th>
                            <th>Date</th>
                            <th class="text-end">Rate</th>
                            <th class="text-end">Area</th>
                            <th class="text-end">Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% registries.forEach(registry => { %>
                        <tr class="<%= registry.isDeleted ? 'table-danger' : '' %>">
                            <td><%= registry.serialNo %></td>
                            <td>
                                <small class="text-muted">
                                    <i class="bi bi-folder"></i> <%= registry.project.name %>
                                </small>
                            </td>
                            <td><strong><%= registry.name %></strong></td>
                            <td><%= registry.plotNumber %></td>
                            <td><%= registry.registryDoneBy %></td>
                            <td><%= new Date(registry.date).toLocaleDateString('en-IN') %></td>
                            <td class="text-end">₹<%= parseFloat(registry.rate).toLocaleString('en-IN') %></td>
                            <td class="text-end"><%= parseFloat(registry.area).toLocaleString('en-IN') %></td>
                            <td class="text-end"><strong>₹<%= (parseFloat(registry.rate) * parseFloat(registry.area)).toLocaleString('en-IN') %></strong></td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="/farmer/registries/<%= registry.id %>" class="btn btn-outline-dark" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <% if (userRole !== 'associate' && userRole !== 'farmer' && !registry.isDeleted) { %>
                                    <a href="/farmer/registries/<%= registry.id %>/edit" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger" title="Delete" 
                                            onclick="if(confirm('Are you sure you want to delete this registry?')) { document.getElementById('delete-form-<%= registry.id %>').submit(); }">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                    <% } %>
                                </div>
                                <% if (userRole !== 'associate' && userRole !== 'farmer' && !registry.isDeleted) { %>
                                <form id="delete-form-<%= registry.id %>" method="POST" action="/farmer/registries/<%= registry.id %>/delete" style="display:none;"></form>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
