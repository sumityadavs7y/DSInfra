<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Farmer Registry</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <%- include('../../partials/page-header', { 
        title: 'Edit Farmer Registry', 
        icon: 'bi-pencil-square', 
        backUrl: '/farmer/registries/' + registry.id, 
        actionUrl: null, 
        actionText: null, 
        actionIcon: null
    }) %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <% if (error) { %>
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> <%= error %>
                        </div>
                        <% } %>

                        <form method="POST" action="/farmer/registries/<%= registry.id %>/edit">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="projectId" class="form-label">Project <span class="text-danger">*</span></label>
                                    <select class="form-select <%= errors.projectId ? 'is-invalid' : '' %>" 
                                            id="projectId" name="projectId" required>
                                        <option value="">Select Project</option>
                                        <% projects.forEach(project => { %>
                                        <option value="<%= project.id %>" <%= registry.projectId == project.id ? 'selected' : '' %>>
                                            <%= project.name %>
                                        </option>
                                        <% }) %>
                                    </select>
                                    <% if (errors.projectId) { %>
                                    <div class="invalid-feedback"><%= errors.projectId.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12">
                                    <label for="registryDoneBy" class="form-label">Registry Done By <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control <%= errors.registryDoneBy ? 'is-invalid' : '' %>" 
                                           id="registryDoneBy" name="registryDoneBy" value="<%= registry.registryDoneBy || '' %>" required>
                                    <% if (errors.registryDoneBy) { %>
                                    <div class="invalid-feedback"><%= errors.registryDoneBy.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label for="date" class="form-label">Date <span class="text-danger">*</span></label>
                                    <input type="date" class="form-control <%= errors.date ? 'is-invalid' : '' %>" 
                                           id="date" name="date" value="<%= registry.date ? new Date(registry.date).toISOString().split('T')[0] : '' %>" required>
                                    <% if (errors.date) { %>
                                    <div class="invalid-feedback"><%= errors.date.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label for="rate" class="form-label">Rate <span class="text-danger">*</span></label>
                                    <input type="number" step="0.01" class="form-control <%= errors.rate ? 'is-invalid' : '' %>" 
                                           id="rate" name="rate" value="<%= registry.rate || '' %>" required>
                                    <% if (errors.rate) { %>
                                    <div class="invalid-feedback"><%= errors.rate.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label for="area" class="form-label">Area <span class="text-danger">*</span></label>
                                    <input type="number" step="0.01" class="form-control <%= errors.area ? 'is-invalid' : '' %>" 
                                           id="area" name="area" value="<%= registry.area || '' %>" required>
                                    <% if (errors.area) { %>
                                    <div class="invalid-feedback"><%= errors.area.msg %></div>
                                    <% } %>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label class="form-label">Total (Rate × Area)</label>
                                    <input type="text" class="form-control" id="totalDisplay" readonly value="0.00">
                                </div>
                            </div>

                            <div class="d-flex gap-2 justify-content-end mt-4">
                                <a href="/farmer/registries/<%= registry.id %>" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Update Registry
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Calculate total dynamically
        const rateInput = document.getElementById('rate');
        const areaInput = document.getElementById('area');
        const totalDisplay = document.getElementById('totalDisplay');

        function calculateTotal() {
            const rate = parseFloat(rateInput.value) || 0;
            const area = parseFloat(areaInput.value) || 0;
            const total = rate * area;
            totalDisplay.value = '₹' + total.toLocaleString('en-IN', { minimumFractionDigits: 2 });
        }

        rateInput.addEventListener('input', calculateTotal);
        areaInput.addEventListener('input', calculateTotal);
        
        // Calculate on page load
        calculateTotal();
    </script>
</body>
</html>
