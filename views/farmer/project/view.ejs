<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Project Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <%- include('../../partials/page-header', { 
        title: project.name, 
        icon: 'bi-folder', 
        backUrl: '/farmer/projects', 
        actionUrl: userRole !== 'associate' && userRole !== 'farmer' && !project.isDeleted ? '/farmer/projects/' + project.id + '/edit' : null, 
        actionText: 'Edit Project', 
        actionIcon: 'bi-pencil'
    }) %>

    <div class="container my-4">
        <div class="row">
            <!-- Project Details -->
            <div class="col-12 col-lg-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Project Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tr>
                                <th width="40%">Project Name:</th>
                                <td><strong><%= project.name %></strong></td>
                            </tr>
                            <tr>
                                <th>Status:</th>
                                <td>
                                    <% if (project.isDeleted) { %>
                                    <span class="badge bg-danger">Deleted</span>
                                    <% } else { %>
                                    <span class="badge bg-success">Active</span>
                                    <% } %>
                                </td>
                            </tr>
                            <tr>
                                <th>Created At:</th>
                                <td><%= new Date(project.createdAt).toLocaleString('en-IN') %></td>
                            </tr>
                            <tr>
                                <th>Last Updated:</th>
                                <td><%= new Date(project.updatedAt).toLocaleString('en-IN') %></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Statistics -->
            <div class="col-12 col-lg-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6 mb-3">
                                <div class="p-3 bg-light rounded">
                                    <h3 class="text-primary mb-0"><%= paymentsCount %></h3>
                                    <small class="text-muted">Total Payments</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="p-3 bg-light rounded">
                                    <h3 class="text-success mb-0">₹<%= parseFloat(paymentsTotal || 0).toLocaleString('en-IN') %></h3>
                                    <small class="text-muted">Payment Amount<br>(Excl. PDC)</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="p-3 bg-light rounded">
                                    <h3 class="text-warning mb-0"><%= registriesCount %></h3>
                                    <small class="text-muted">Total Registries</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="p-3 bg-light rounded">
                                    <h3 class="text-info mb-0">₹<%= parseFloat(registriesTotal || 0).toLocaleString('en-IN') %></h3>
                                    <small class="text-muted">Registry Total</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="p-3 bg-secondary text-white rounded">
                                    <h3 class="mb-0"><%= pdcPaymentsCount %></h3>
                                    <small>PDC Payments</small>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="p-3 bg-secondary text-white rounded">
                                    <h3 class="mb-0">₹<%= parseFloat(pdcTotal || 0).toLocaleString('en-IN') %></h3>
                                    <small>Total PDC Amount</small>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="p-3 <%= duePayment > 0 ? 'bg-danger' : duePayment < 0 ? 'bg-warning' : 'bg-success' %> text-white rounded">
                                    <h2 class="mb-0">₹<%= Math.abs(parseFloat(duePayment || 0)).toLocaleString('en-IN') %></h2>
                                    <strong>
                                        <% if (duePayment > 0) { %>
                                        Due Payment (Registry - Payments)
                                        <% } else if (duePayment < 0) { %>
                                        Excess Payment
                                        <% } else { %>
                                        Fully Paid (No Dues)
                                        <% } %>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12 col-md-4">
                                <a href="/farmer/payments?projectId=<%= project.id %>" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-cash-stack"></i> View Payments
                                </a>
                            </div>
                            <div class="col-12 col-md-4">
                                <a href="/farmer/registries?projectId=<%= project.id %>" class="btn btn-outline-warning w-100">
                                    <i class="bi bi-file-earmark-text"></i> View Registries
                                </a>
                            </div>
                            <% if (userRole !== 'associate' && userRole !== 'farmer') { %>
                            <div class="col-12 col-md-4">
                                <a href="/farmer/payments/create?projectId=<%= project.id %>" class="btn btn-outline-success w-100">
                                    <i class="bi bi-plus-circle"></i> Add Payment
                                </a>
                            </div>
                            <div class="col-12 col-md-4">
                                <a href="/farmer/registries/create?projectId=<%= project.id %>" class="btn btn-outline-info w-100">
                                    <i class="bi bi-plus-circle"></i> Add Registry
                                </a>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
