<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmer Projects</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <%- include('../../partials/page-header', { 
        title: 'Farmer Projects', 
        icon: 'bi-folder', 
        backUrl: '/farmer', 
        actionUrl: '/farmer/projects/create', 
        actionText: 'New Project', 
        actionIcon: 'bi-plus-circle'
    }) %>

    <div class="container my-4">
        <!-- Show/Hide Deleted Toggle -->
        <div class="mb-3">
            <% if (showDeleted) { %>
                <a href="/farmer/projects" class="btn btn-outline-danger">
                    <i class="bi bi-eye-slash"></i> Hide Deleted
                </a>
            <% } else { %>
                <a href="/farmer/projects?showDeleted=true" class="btn btn-outline-secondary">
                    <i class="bi bi-trash"></i> Show Deleted
                </a>
            <% } %>
        </div>

        <!-- Search -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/farmer/projects" method="GET" class="row g-3">
                    <input type="hidden" name="showDeleted" value="<%= showDeleted ? 'true' : '' %>">
                    <div class="col-12 col-md-9">
                        <input type="text" class="form-control" placeholder="Search by project name..." 
                               name="search" value="<%= search || '' %>">
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="bi bi-search"></i> Search
                            </button>
                            <% if (search) { %>
                            <a href="/farmer/projects" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i>
                            </a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Projects Grid -->
        <% if (projects.length === 0) { %>
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-folder fs-1 text-muted"></i>
                <p class="text-muted mt-3">No projects found</p>
                <% if (userRole !== 'associate') { %>
                <a href="/farmer/projects/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create First Project
                </a>
                <% } %>
            </div>
        </div>
        <% } else { %>
        <div class="row g-4">
            <% projects.forEach(project => { %>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm <%= project.isDeleted ? 'opacity-75 border-danger border-2' : '' %>">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title text-success mb-0">
                                <i class="bi bi-folder"></i>
                                <%= project.name %>
                            </h5>
                            <div class="d-flex align-items-center gap-2">
                                <% if (userRole !== 'associate' && !project.isDeleted) { %>
                                <div class="form-check form-switch">
                                    <input class="form-check-input quicklink-toggle" type="checkbox" 
                                           id="quicklink-<%= project.id %>" 
                                           data-project-id="<%= project.id %>"
                                           <%= project.isQuickLink ? 'checked' : '' %>>
                                    <label class="form-check-label small" for="quicklink-<%= project.id %>" title="Pin to Dashboard">
                                        <i class="bi bi-pin-angle-fill"></i>
                                    </label>
                                </div>
                                <% } %>
                                <% if (project.isDeleted) { %>
                                <span class="badge bg-danger">Deleted</span>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-2 mt-3">
                            <a href="/farmer/projects/<%= project.id %>" class="btn btn-sm btn-outline-dark flex-fill">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <% if (userRole !== 'associate' && !project.isDeleted) { %>
                            <a href="/farmer/projects/<%= project.id %>/edit" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form method="POST" action="/farmer/projects/<%= project.id %>/delete" style="display:inline;" 
                                  onsubmit="return confirm('Delete this project?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                            <% } %>
                            <% if (userRole !== 'associate' && project.isDeleted) { %>
                            <form method="POST" action="/farmer/projects/<%= project.id %>/restore" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restore
                                </button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-muted small">
                        <i class="bi bi-calendar"></i> 
                        <%= new Date(project.createdAt).toLocaleDateString('en-IN') %>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Handle quick link toggle
        document.querySelectorAll('.quicklink-toggle').forEach(toggle => {
            toggle.addEventListener('change', async function() {
                const projectId = this.dataset.projectId;
                const isChecked = this.checked;
                
                try {
                    const response = await fetch(`/farmer/projects/${projectId}/toggle-quicklink`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        // Show feedback
                        const label = this.nextElementSibling;
                        const originalTitle = label.title;
                        label.title = data.isQuickLink ? 'Pinned to Dashboard!' : 'Unpinned from Dashboard';
                        setTimeout(() => {
                            label.title = originalTitle;
                        }, 2000);
                    } else {
                        // Revert toggle on error
                        this.checked = !isChecked;
                        alert('Error: ' + data.message);
                    }
                } catch (error) {
                    // Revert toggle on error
                    this.checked = !isChecked;
                    console.error('Error toggling quick link:', error);
                    alert('Error toggling quick link');
                }
            });
        });
    </script>
</body>
</html>
