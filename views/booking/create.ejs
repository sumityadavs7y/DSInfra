<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
        <%- include('../partials/page-header', { 
        title: 'New Booking', 
        icon: 'bi-calendar-plus', 
        backUrl: '/booking'
    }) %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <% if (error) { %>
                            <div class="alert alert-danger"><i class="bi bi-exclamation-triangle"></i> <%= error %></div>
                        <% } %>
                        
                        <form method="POST" action="/booking/create" id="bookingForm">
                            <!-- Customer Selection -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="text-primary mb-0"><i class="bi bi-person"></i> Customer Information</h5>
                                <a href="/customer/create" class="btn btn-sm btn-success" target="_blank">
                                    <i class="bi bi-plus-circle"></i> Add New Customer
                                </a>
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Select Customer <span class="text-danger">*</span></label>
                                <select class="form-select" name="customerId" id="customerSelect" required>
                                    <option value="">-- Select Customer --</option>
                                    <% customers.forEach(customer => { %>
                                        <option value="<%= customer.id %>" 
                                            data-name="<%= customer.applicantName %>"
                                            data-father="<%= customer.fatherOrHusbandName %>"
                                            data-mobile="<%= customer.mobileNo %>"
                                            data-aadhaar="<%= customer.aadhaarNo %>"
                                            data-address="<%= customer.address %>">
                                            <%= customer.applicantName %> - <%= customer.mobileNo %> (<%= customer.customerNo %>)
                                        </option>
                                    <% }); %>
                                </select>
                                <div class="alert alert-info mt-2 d-none" id="customerInfo">
                                    <small>
                                        <strong>Father/Husband:</strong> <span id="infoFather"></span><br>
                                        <strong>Mobile:</strong> <span id="infoMobile"></span><br>
                                        <strong>Aadhaar:</strong> <span id="infoAadhaar"></span><br>
                                        <strong>Address:</strong> <span id="infoAddress"></span>
                                    </small>
                                </div>
                            </div>
                            
                            <hr class="my-4">
                            
                            <!-- Property Details -->
                            <h5 class="text-primary mb-3"><i class="bi bi-house"></i> Property Details</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Booking Date <span class="text-danger">*</span></label>
                                    <input type="date" class="form-control" name="bookingDate" 
                                           value="<%= new Date().toISOString().split('T')[0] %>" required>
                                    <div class="form-text">Default: Today's date (editable)</div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Project <span class="text-danger">*</span></label>
                                    <select class="form-select" name="projectId" id="projectSelect" required>
                                        <option value="">Select Project</option>
                                        <% projects.forEach(project => { %>
                                            <option value="<%= project.id %>" 
                                                    data-legaldetails="<%= (project.legalDetails || '').replace(/"/g, '&quot;') %>">
                                                <%= project.projectName %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Plot Number <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="plotNo" required>
                                </div>
                                <div class="col-6 col-md-3">
                                    <label class="form-label fw-semibold">Area (sq.ft.) <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control" name="area" id="area" step="0.01" min="0" required>
                                </div>
                                <div class="col-6 col-md-3">
                                    <label class="form-label fw-semibold">Rate per sq.ft. (₹) <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control" name="rate" id="rate" step="0.01" min="0" required>
                                </div>
                                <div class="col-6 col-md-3">
                                    <label class="form-label fw-semibold">Partner Rate (₹)</label>
                                    <input type="number" class="form-control" name="associateRate" id="associateRate" step="0.01" min="0" value="0">
                                    <div class="form-text">For partner commission calculation</div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <label class="form-label fw-semibold">PLC (%)</label>
                                    <input type="number" class="form-control" name="plc" id="plc" step="0.01" min="0" max="100" value="0">
                                    <div class="form-text">Price Level Charges percentage</div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <label class="form-label fw-semibold">Discount (₹)</label>
                                    <input type="number" class="form-control" name="discount" id="discount" step="0.01" min="0" value="0">
                                </div>
                                <div class="col-12 col-md-4">
                                    <label class="form-label fw-semibold">Effective Rate (₹)</label>
                                    <input type="number" class="form-control bg-light" id="effectiveRate" readonly>
                                </div>
                                <div class="col-6 col-md-4">
                                    <label class="form-label fw-semibold">Base Amount (₹)</label>
                                    <input type="number" class="form-control bg-light" id="baseAmount" readonly>
                                    <div class="form-text">Effective Rate × Area</div>
                                </div>
                                <div class="col-6 col-md-4">
                                    <label class="form-label fw-semibold">PLC Amount (₹)</label>
                                    <input type="number" class="form-control bg-light" id="plcAmount" readonly>
                                    <div class="form-text">PLC% of Base Amount</div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-semibold text-primary">Total Amount (₹)</label>
                                    <input type="number" class="form-control bg-light border-primary fw-bold" id="totalAmount" readonly>
                                    <div class="form-text">Base Amount + PLC Amount</div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-semibold">Legal Details</label>
                                    <textarea class="form-control" name="legalDetails" id="legalDetails" rows="3"></textarea>
                                    <div class="form-text">Auto-filled from project's default legal details (editable)</div>
                                </div>
                            </div>
                            
                            <hr class="my-4">
                            
                            <!-- Partner Details (Optional) -->
                            <h5 class="text-dark mb-3"><i class="bi bi-briefcase"></i> Partner Details (Optional)</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Partner</label>
                                    <select class="form-select" name="brokerId" id="brokerSelect">
                                        <option value="">-- No Partner --</option>
                                        <% brokers.forEach(broker => { %>
                                            <option value="<%= broker.id %>">
                                                <%= broker.name %> (<%= broker.mobileNo %>)
                                            </option>
                                        <% }) %>
                                    </select>
                                    <div class="form-text">Select if this booking was referred by an associate</div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Partner PLC Commission (%)</label>
                                    <input type="number" class="form-control" name="associatePlcCommission" id="associatePlcCommission" 
                                           step="0.01" min="0" max="100" value="0">
                                    <div class="form-text">Additional PLC-based commission percentage</div>
                                </div>
                                <div class="col-6 col-md-6">
                                    <label class="form-label fw-semibold">Base Commission (₹)</label>
                                    <input type="number" class="form-control bg-light" id="baseCommission" readonly>
                                    <div class="form-text">(Effective Rate - Partner Rate) × Area</div>
                                </div>
                                <div class="col-6 col-md-6">
                                    <label class="form-label fw-semibold">PLC Commission (₹)</label>
                                    <input type="number" class="form-control bg-light" id="plcCommission" readonly>
                                    <div class="form-text">Partner PLC% of Base Amount</div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-semibold text-success">Total Partner Commission (₹)</label>
                                    <input type="number" class="form-control bg-light border-success fw-bold" name="brokerCommission" id="brokerCommission" 
                                           step="0.01" min="0" value="0" readonly>
                                    <div class="form-text">Base Commission + PLC Commission</div>
                                </div>
                            </div>
                            
                            <hr class="my-4">
                            
                            <!-- Booking Status & Registry -->
                            <h5 class="text-dark mb-3"><i class="bi bi-file-earmark-check"></i> Booking Status</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Loan</label>
                                    <select class="form-select" name="loan">
                                        <option value="N/A" selected>N/A</option>
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>
                                    <small class="text-muted">Loan status for this booking</small>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Expected Registry Date</label>
                                    <input type="date" class="form-control" name="expectedRegistryDate">
                                    <small class="text-muted">Expected date for registry completion</small>
                                </div>
                            </div>
                            
                            <hr class="my-4">
                            
                            <!-- Payment Details -->
                            <h5 class="text-primary mb-3"><i class="bi bi-credit-card"></i> Initial Payment Details</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Booking Amount (₹) <span class="text-danger">*</span></label>
                                    <input type="number" class="form-control" name="bookingAmount" step="0.01" min="0" required>
                                    <div class="form-text">This will be recorded as the first payment</div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Receipt Date</label>
                                    <input type="date" class="form-control" name="receiptDate" value="<%= currentDate %>">
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Payment Mode <span class="text-danger">*</span></label>
                                    <select class="form-select" name="paymentMode" required>
                                        <option value="">Select Mode</option>
                                        <option value="Cash">Cash</option>
                                        <option value="Cheque">Cheque</option>
                                        <option value="Online Transfer">Online Transfer</option>
                                        <option value="UPI">UPI</option>
                                        <option value="Card">Card</option>
                                    </select>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Transaction Number</label>
                                    <input type="text" class="form-control" name="transactionNo">
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-semibold">Payment Remarks</label>
                                    <textarea class="form-control" name="paymentRemarks" rows="2" placeholder="Initial booking payment"></textarea>
                                </div>
                            </div>
                            
                            <div class="d-flex gap-2 justify-content-end">
                                <a href="/booking" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Create Booking
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Show customer info
        const customerSelect = document.getElementById('customerSelect');
        const customerInfo = document.getElementById('customerInfo');
        
        customerSelect.addEventListener('change', function() {
            const selected = this.options[this.selectedIndex];
            if (this.value) {
                document.getElementById('infoFather').textContent = selected.dataset.father;
                document.getElementById('infoMobile').textContent = selected.dataset.mobile;
                document.getElementById('infoAadhaar').textContent = selected.dataset.aadhaar;
                document.getElementById('infoAddress').textContent = selected.dataset.address;
                customerInfo.classList.remove('d-none');
            } else {
                customerInfo.classList.add('d-none');
            }
        });
        
        // Auto-calculate
        const area = document.getElementById('area');
        const rate = document.getElementById('rate');
        const associateRate = document.getElementById('associateRate');
        const plc = document.getElementById('plc');
        const discount = document.getElementById('discount');
        const effectiveRate = document.getElementById('effectiveRate');
        const baseAmountField = document.getElementById('baseAmount');
        const plcAmountField = document.getElementById('plcAmount');
        const totalAmount = document.getElementById('totalAmount');
        const baseCommissionField = document.getElementById('baseCommission');
        const plcCommissionField = document.getElementById('plcCommission');
        const brokerCommission = document.getElementById('brokerCommission');
        const brokerSelect = document.getElementById('brokerSelect');
        const associatePlcCommission = document.getElementById('associatePlcCommission');
        
        function calculateAmounts() {
            const areaVal = parseFloat(area.value) || 0;
            const rateVal = parseFloat(rate.value) || 0;
            const associateRateVal = parseFloat(associateRate.value) || 0;
            const plcPercent = parseFloat(plc.value) || 0;
            const discountVal = parseFloat(discount.value) || 0;
            const associatePlcPercent = parseFloat(associatePlcCommission.value) || 0;
            
            // Calculate effective rate and amounts
            const effRate = rateVal - discountVal;
            const baseAmount = areaVal * effRate;
            const plcAmount = baseAmount * (plcPercent / 100);
            const total = baseAmount + plcAmount;
            
            // Update amount fields
            effectiveRate.value = effRate.toFixed(2);
            baseAmountField.value = baseAmount.toFixed(2);
            plcAmountField.value = plcAmount.toFixed(2);
            totalAmount.value = total.toFixed(2);
            
            // Auto-calculate associate commission breakdown
            if (brokerSelect.value) {
                const baseComm = Math.max(0, (effRate - associateRateVal) * areaVal);
                const plcComm = baseAmount * (associatePlcPercent / 100);
                const totalComm = baseComm + plcComm;
                
                baseCommissionField.value = baseComm.toFixed(2);
                plcCommissionField.value = plcComm.toFixed(2);
                brokerCommission.value = totalComm.toFixed(2);
            } else {
                baseCommissionField.value = '0.00';
                plcCommissionField.value = '0.00';
                brokerCommission.value = '0.00';
            }
        }
        
        [area, rate, associateRate, plc, discount, associatePlcCommission].forEach(el => el.addEventListener('input', calculateAmounts));
        
        // Recalculate when associate is selected/deselected
        brokerSelect.addEventListener('change', function() {
            calculateAmounts();
        });
        
        // Auto-fill legal details when project is selected
        const projectSelect = document.getElementById('projectSelect');
        const legalDetails = document.getElementById('legalDetails');
        
        projectSelect.addEventListener('change', function() {
            const selected = this.options[this.selectedIndex];
            if (this.value && selected.dataset.legaldetails) {
                // Only update if legal details is empty or user confirms
                if (!legalDetails.value || confirm('Replace current legal details with project defaults?')) {
                    legalDetails.value = selected.dataset.legaldetails;
                }
            }
        });
    </script>
</body>
</html>
