<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <div>
                <a href="/dashboard" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Dashboard
                </a>
                <span class="navbar-brand mb-0 h1">Bookings</span>
            </div>
            <a href="/booking/create" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> New Booking
            </a>
        </div>
    </nav>

    <div class="container my-4">
        <!-- Stats -->
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-primary"><%= bookings.length %></h3>
                        <p class="text-muted small mb-0">Total Bookings</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-success"><%= bookings.filter(b => b.status === 'Active').length %></h3>
                        <p class="text-muted small mb-0">Active</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-info"><%= bookings.filter(b => b.status === 'Completed').length %></h3>
                        <p class="text-muted small mb-0">Completed</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Card -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <h5 class="mb-0">All Bookings</h5>
                    </div>
                    <div class="col-12 col-md-6 mt-2 mt-md-0">
                        <input type="text" class="form-control" id="searchBox" 
                               placeholder="ðŸ” Search by booking no, customer, plot...">
                    </div>
                </div>

                <% if (bookings.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="bi bi-journal-x fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No bookings found</p>
                        <a href="/booking/create" class="btn btn-primary">Create First Booking</a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover" id="bookingTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Booking No</th>
                                    <th class="d-none d-md-table-cell">Date</th>
                                    <th>Customer</th>
                                    <th class="d-none d-lg-table-cell">Mobile</th>
                                    <th class="d-none d-xl-table-cell">Project</th>
                                    <th>Plot No</th>
                                    <th class="d-none d-lg-table-cell">Total</th>
                                    <th class="d-none d-xl-table-cell">Balance</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% bookings.forEach(booking => { %>
                                    <tr>
                                        <td><strong><%= booking.bookingNo %></strong></td>
                                        <td class="d-none d-md-table-cell"><%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %></td>
                                        <td><%= booking.customer.applicantName %></td>
                                        <td class="d-none d-lg-table-cell"><%= booking.customer.mobileNo %></td>
                                        <td class="d-none d-xl-table-cell"><%= booking.project.projectName %></td>
                                        <td><%= booking.plotNo %></td>
                                        <td class="d-none d-lg-table-cell">â‚¹<%= parseFloat(booking.totalAmount).toLocaleString('en-IN') %></td>
                                        <td class="d-none d-xl-table-cell">â‚¹<%= parseFloat(booking.remainingAmount).toLocaleString('en-IN') %></td>
                                        <td>
                                            <span class="badge bg-<%= booking.status === 'Active' ? 'success' : booking.status === 'Completed' ? 'info' : 'danger' %>">
                                                <%= booking.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/booking/<%= booking.id %>" class="btn btn-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/booking/<%= booking.id %>/edit" class="btn btn-warning">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('searchBox')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#bookingTable tbody tr');
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
