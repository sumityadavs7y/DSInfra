<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
        <%- include('../partials/page-header', { 
        title: 'Bookings', 
        icon: 'bi-calendar-check-fill', 
        backUrl: '/dashboard', 
        actionUrl: '/booking/create', 
        actionText: 'New Booking', 
        actionIcon: 'bi-calendar-plus'
    }) %>

    <div class="container my-4">
        <!-- Filters -->
        <form method="GET" action="/booking" id="filterForm">
            <input type="hidden" name="showDeleted" value="<%= showDeleted ? 'true' : '' %>">
            <input type="hidden" name="registryStatus" value="<%= registryStatus %>">
            
            <div class="row mb-3 g-2">
                <!-- Show/Hide Deleted Toggle -->
                <div class="col-12 col-md-auto">
                    <% if (showDeleted) { %>
                        <a href="/booking?registryStatus=<%= registryStatus %>&bookingDateFrom=<%= bookingDateFrom %>&bookingDateTo=<%= bookingDateTo %>&registryDateFrom=<%= registryDateFrom %>&registryDateTo=<%= registryDateTo %>" class="btn btn-outline-danger">
                            <i class="bi bi-eye-slash"></i> Hide Deleted
                        </a>
                    <% } else { %>
                        <a href="/booking?showDeleted=true&registryStatus=<%= registryStatus %>&bookingDateFrom=<%= bookingDateFrom %>&bookingDateTo=<%= bookingDateTo %>&registryDateFrom=<%= registryDateFrom %>&registryDateTo=<%= registryDateTo %>" class="btn btn-outline-secondary">
                            <i class="bi bi-trash"></i> Show Deleted
                        </a>
                    <% } %>
                </div>
                
                <!-- Registry Status Filter -->
                <div class="col-12 col-md-auto">
                    <div class="btn-group" role="group" aria-label="Registry filter">
                        <button type="button" onclick="setRegistryStatus('all')" 
                           class="btn btn-<%= registryStatus === 'all' ? 'primary' : 'outline-primary' %>">
                            <i class="bi bi-list"></i> All
                        </button>
                        <button type="button" onclick="setRegistryStatus('completed')" 
                           class="btn btn-<%= registryStatus === 'completed' ? 'success' : 'outline-success' %>">
                            <i class="bi bi-check-circle"></i> Registered
                        </button>
                        <button type="button" onclick="setRegistryStatus('pending')" 
                           class="btn btn-<%= registryStatus === 'pending' ? 'warning' : 'outline-warning' %>">
                            <i class="bi bi-clock"></i> Unregistered
                        </button>
                    </div>
                </div>
            </div>

            <!-- Date Filters -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Booking Date Filter -->
                        <div class="col-12 col-lg-5">
                            <label class="form-label fw-bold text-primary">
                                <i class="bi bi-calendar-event"></i> Booking Date
                            </label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <label class="form-label small">From</label>
                                    <input type="date" class="form-control form-control-sm" 
                                           name="bookingDateFrom" value="<%= bookingDateFrom %>"
                                           onchange="document.getElementById('filterForm').submit()">
                                </div>
                                <div class="col-6">
                                    <label class="form-label small">To</label>
                                    <input type="date" class="form-control form-control-sm" 
                                           name="bookingDateTo" value="<%= bookingDateTo %>"
                                           onchange="document.getElementById('filterForm').submit()">
                                </div>
                            </div>
                        </div>

                        <!-- Registry Date Filter -->
                        <div class="col-12 col-lg-5">
                            <label class="form-label fw-bold text-success">
                                <i class="bi bi-calendar-check"></i> Registry Date
                            </label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <label class="form-label small">From</label>
                                    <input type="date" class="form-control form-control-sm" 
                                           name="registryDateFrom" value="<%= registryDateFrom %>"
                                           onchange="document.getElementById('filterForm').submit()">
                                </div>
                                <div class="col-6">
                                    <label class="form-label small">To</label>
                                    <input type="date" class="form-control form-control-sm" 
                                           name="registryDateTo" value="<%= registryDateTo %>"
                                           onchange="document.getElementById('filterForm').submit()">
                                </div>
                            </div>
                        </div>

                        <!-- Clear Filters Button -->
                        <div class="col-12 col-lg-2 d-flex align-items-end">
                            <a href="/booking" class="btn btn-outline-secondary btn-sm w-100">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!-- Stats -->
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-primary"><%= bookings.length %></h3>
                        <p class="text-muted small mb-0">Total Bookings</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-success"><%= bookings.filter(b => b.status === 'Active').length %></h3>
                        <p class="text-muted small mb-0">Active</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-success"><%= bookings.filter(b => b.registryCompleted).length %></h3>
                        <p class="text-muted small mb-0">Registered</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-warning"><%= bookings.filter(b => !b.registryCompleted).length %></h3>
                        <p class="text-muted small mb-0">Unregistered</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Card -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <h5 class="mb-0">All Bookings</h5>
                    </div>
                    <div class="col-12 col-md-6 mt-2 mt-md-0">
                        <input type="text" class="form-control" id="searchBox" 
                               placeholder="ðŸ” Search by booking no, customer, plot...">
                    </div>
                </div>

                <% if (bookings.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="bi bi-journal-x fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No bookings found</p>
                        <a href="/booking/create" class="btn btn-primary">Create First Booking</a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover" id="bookingTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Booking No</th>
                                    <th class="d-none d-md-table-cell">Date</th>
                                    <th>Customer</th>
                                    <th class="d-none d-lg-table-cell">Mobile</th>
                                    <th class="d-none d-xl-table-cell">Project</th>
                                    <th>Plot No</th>
                                    <th class="d-none d-lg-table-cell">Total</th>
                                    <th class="d-none d-xl-table-cell">Balance</th>
                                    <th>Status</th>
                                    <th class="d-none d-md-table-cell">Registry</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% bookings.forEach(booking => { %>
                                    <tr>
                                        <td><strong><%= booking.bookingNo %></strong></td>
                                        <td class="d-none d-md-table-cell"><%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %></td>
                                        <td><%= booking.customer.applicantName %></td>
                                        <td class="d-none d-lg-table-cell"><%= booking.customer.mobileNo %></td>
                                        <td class="d-none d-xl-table-cell"><%= booking.project.projectName %></td>
                                        <td><%= booking.plotNo %></td>
                                        <td class="d-none d-lg-table-cell">â‚¹<%= parseFloat(booking.totalAmount).toLocaleString('en-IN') %></td>
                                        <td class="d-none d-xl-table-cell">â‚¹<%= parseFloat(booking.remainingAmount).toLocaleString('en-IN') %></td>
                                        <td>
                                            <% if (booking.isDeleted) { %>
                                            <span class="badge bg-danger">Deleted</span>
                                            <% } else { %>
                                            <span class="badge bg-<%= booking.status === 'Active' ? 'success' : 'danger' %>">
                                                <%= booking.status %>
                                            </span>
                                            <% } %>
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <% if (booking.registryCompleted) { %>
                                                <i class="bi bi-check-circle-fill text-success" title="Registry Done"></i>
                                            <% } else { %>
                                                <i class="bi bi-x-circle-fill text-warning" title="Registry Pending"></i>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/booking/<%= booking.id %>" class="btn btn-outline-dark" title="View Booking">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <% if (!booking.isDeleted) { %>
                                                <a href="/booking/<%= booking.id %>/edit" class="btn btn-outline-primary" title="Edit Booking">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger" title="Delete Booking"
                                                        onclick="if(confirm('Delete this booking? This will also delete all related payments.')) { 
                                                            const form = document.createElement('form'); 
                                                            form.method = 'POST'; 
                                                            form.action = '/booking/<%= booking.id %>/delete'; 
                                                            document.body.appendChild(form); 
                                                            form.submit(); 
                                                        }">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Search functionality
        document.getElementById('searchBox')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#bookingTable tbody tr');
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Registry status filter
        function setRegistryStatus(status) {
            document.querySelector('input[name="registryStatus"]').value = status;
            document.getElementById('filterForm').submit();
        }
    </script>
</body>
</html>
