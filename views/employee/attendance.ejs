<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance - <%= employee.firstName %> <%= employee.lastName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <%- include('../partials/page-header', { 
        title: 'Attendance Management', 
        icon: 'bi-calendar-check', 
        backUrl: '/employee/' + employee.id
    }) %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <!-- Employee Info -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h5><i class="bi bi-person-badge"></i> <%= employee.firstName %> <%= employee.lastName %></h5>
                        <p class="text-muted mb-0"><%= employee.employeeNo %> | <%= employee.department %> - <%= employee.designation %></p>
                    </div>
                </div>

                <!-- Info Alert -->
                <div class="alert alert-info border-0 shadow-sm mb-4">
                    <i class="bi bi-calendar-check"></i> <strong>Attendance Management:</strong> Employees are auto-marked as <strong>Present</strong> for all working days up to today. Click the action button (<i class="bi bi-calendar-plus"></i> or <i class="bi bi-pencil-square"></i>) to mark or edit attendance as <strong>Present</strong>, <strong>Absent</strong>, <strong>Leave</strong>, <strong>Half-Day</strong>, <strong>Holiday</strong>, or <strong>Week-Off</strong> with custom times.
                </div>

                <!-- Month Selector -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Month</label>
                                <select class="form-select" name="month" onchange="this.form.submit()">
                                    <% for (let m = 1; m <= 12; m++) { %>
                                        <option value="<%= m %>" <%= selectedMonth === m ? 'selected' : '' %>>
                                            <%= ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'][m-1] %>
                                        </option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Year</label>
                                <select class="form-select" name="year" onchange="this.form.submit()">
                                    <% for (let y = new Date().getFullYear(); y >= new Date().getFullYear() - 5; y--) { %>
                                        <option value="<%= y %>" <%= selectedYear === y ? 'selected' : '' %>><%= y %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">&nbsp;</label>
                                <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#markAttendanceModal" onclick="markAttendance('<%= new Date().toISOString().split('T')[0] %>', 'Present', '', '', 8, '', '')">
                                    <i class="bi bi-calendar-plus"></i> Mark Attendance
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Stats -->
                <div class="row g-3 mb-4">
                    <div class="col-6 col-md-3">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center">
                                <h3 class="h2 text-success"><%= attendance.filter(a => a.status === 'Present').length %></h3>
                                <small class="text-muted">Present</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center">
                                <h3 class="h2 text-danger"><%= attendance.filter(a => a.status === 'Absent').length %></h3>
                                <small class="text-muted">Absent</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center">
                                <h3 class="h2 text-warning"><%= attendance.filter(a => a.status === 'Leave').length %></h3>
                                <small class="text-muted">Leave</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body text-center">
                                <h3 class="h2 text-info"><%= attendance.filter(a => a.status === 'Half-Day').length %></h3>
                                <small class="text-muted">Half-Day</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Attendance Table -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Day</th>
                                        <th>Check In</th>
                                        <th>Check Out</th>
                                        <th>Hours</th>
                                        <th>Status</th>
                                        <th>Remarks</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (attendance.length === 0) { %>
                                        <tr>
                                            <td colspan="8" class="text-center py-4 text-muted">
                                                No attendance records for this month
                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <% attendance.forEach(att => { %>
                                        <tr class="<%= att.isAutoMarked ? 'table-light' : '' %>">
                                            <td><%= new Date(att.date).toLocaleDateString('en-IN') %></td>
                                            <td><%= ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'][new Date(att.date).getDay()] %></td>
                                            <td><%= att.checkIn || '-' %></td>
                                            <td><%= att.checkOut || '-' %></td>
                                            <td><%= att.workingHours || 0 %>h</td>
                                            <td>
                                                <span class="badge bg-<%= att.status === 'Present' ? 'success' : att.status === 'Absent' ? 'danger' : att.status === 'Leave' ? 'warning' : att.status === 'Half-Day' ? 'info' : 'secondary' %>">
                                                    <%= att.status %><% if (att.isAutoMarked) { %> <i class="bi bi-robot" title="Auto-marked"></i><% } %>
                                                </span>
                                            </td>
                                            <td><small><%= att.remarks || '-' %></small></td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-<%= att.status === 'Present' ? 'success' : att.status === 'Absent' ? 'danger' : att.status === 'Leave' ? 'warning' : att.status === 'Half-Day' ? 'info' : 'secondary' %>" 
                                                        onclick="markAttendance('<%= new Date(att.date).toISOString().split('T')[0] %>', '<%= att.status %>', '<%= att.checkIn || '' %>', '<%= att.checkOut || '' %>', '<%= att.workingHours || 0 %>', '<%= att.remarks || '' %>', '<%= att.leaveType || '' %>')"
                                                        title="<%= att.isAutoMarked ? 'Mark/Edit Attendance' : 'Edit Attendance' %>">
                                                    <i class="bi bi-<%= att.isAutoMarked ? 'calendar-plus' : 'pencil-square' %>"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mark Attendance Modal -->
    <div class="modal fade" id="markAttendanceModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white" id="modalHeader">
                    <h5 class="modal-title"><i class="bi bi-calendar-check"></i> Mark Attendance</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/employee/<%= employee.id %>/attendance/mark">
                    <div class="modal-body">
                        <div class="alert alert-info" id="modalAlert">
                            <i class="bi bi-info-circle"></i> Mark the attendance status for the selected date.
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" name="date" id="dateInput" required value="<%= new Date().toISOString().split('T')[0] %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Status <span class="text-danger">*</span></label>
                            <select class="form-select" name="status" id="statusSelect" required>
                                <option value="Present">Present</option>
                                <option value="Absent">Absent</option>
                                <option value="Leave">Leave</option>
                                <option value="Half-Day">Half-Day</option>
                                <option value="Holiday">Holiday</option>
                                <option value="Week-Off">Week-Off</option>
                            </select>
                        </div>
                        <div class="row mb-3" id="timeFields">
                            <div class="col-md-6">
                                <label class="form-label">Check In</label>
                                <input type="time" class="form-control" name="checkIn">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Check Out</label>
                                <input type="time" class="form-control" name="checkOut">
                            </div>
                        </div>
                        <div class="mb-3" id="leaveTypeField" style="display: none;">
                            <label class="form-label">Leave Type</label>
                            <select class="form-select" name="leaveType">
                                <option value="">Select Type</option>
                                <option value="Casual">Casual Leave</option>
                                <option value="Sick">Sick Leave</option>
                                <option value="Earned">Earned Leave</option>
                                <option value="Unpaid">Unpaid Leave</option>
                                <option value="Maternity">Maternity Leave</option>
                                <option value="Paternity">Paternity Leave</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Working Hours</label>
                            <input type="number" class="form-control" name="workingHours" step="0.5" value="8">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Remarks</label>
                            <textarea class="form-control" name="remarks" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Attendance</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const statusSelect = document.getElementById('statusSelect');
        const modalHeader = document.getElementById('modalHeader');
        const modalAlert = document.getElementById('modalAlert');
        
        statusSelect?.addEventListener('change', function() {
            const status = this.value;
            const timeFields = document.getElementById('timeFields');
            const leaveTypeField = document.getElementById('leaveTypeField');
            
            // Update modal header color based on status
            modalHeader.className = 'modal-header text-white';
            if (status === 'Present') {
                modalHeader.classList.add('bg-success');
                modalAlert.className = 'alert alert-success';
                modalAlert.innerHTML = '<i class="bi bi-check-circle"></i> Marking employee as <strong>Present</strong>.';
            } else if (status === 'Absent') {
                modalHeader.classList.add('bg-danger');
                modalAlert.className = 'alert alert-danger';
                modalAlert.innerHTML = '<i class="bi bi-x-circle"></i> Marking employee as <strong>Absent</strong>.';
            } else if (status === 'Leave') {
                modalHeader.classList.add('bg-warning');
                modalAlert.className = 'alert alert-warning';
                modalAlert.innerHTML = '<i class="bi bi-calendar-x"></i> Marking employee on <strong>Leave</strong>.';
            } else if (status === 'Half-Day') {
                modalHeader.classList.add('bg-info');
                modalAlert.className = 'alert alert-info';
                modalAlert.innerHTML = '<i class="bi bi-clock"></i> Marking employee as <strong>Half-Day</strong>.';
            } else {
                modalHeader.classList.add('bg-secondary');
                modalAlert.className = 'alert alert-secondary';
                modalAlert.innerHTML = '<i class="bi bi-info-circle"></i> Marking status as <strong>' + status + '</strong>.';
            }
            
            // Show/hide fields based on status
            if (status === 'Leave') {
                timeFields.style.display = 'none';
                leaveTypeField.style.display = 'block';
            } else if (status === 'Absent' || status === 'Holiday' || status === 'Week-Off') {
                timeFields.style.display = 'none';
                leaveTypeField.style.display = 'none';
            } else {
                timeFields.style.display = 'flex';
                leaveTypeField.style.display = 'none';
            }
        });

        function markAttendance(date, status, checkIn, checkOut, workingHours, remarks, leaveType) {
            document.getElementById('dateInput').value = date;
            document.getElementById('statusSelect').value = status || 'Present';
            document.querySelector('[name="checkIn"]').value = checkIn || '';
            document.querySelector('[name="checkOut"]').value = checkOut || '';
            document.querySelector('[name="workingHours"]').value = workingHours || 8;
            document.querySelector('[name="remarks"]').value = remarks || '';
            document.querySelector('[name="leaveType"]').value = leaveType || '';
            
            // Trigger change event to update UI
            statusSelect.dispatchEvent(new Event('change'));
            
            const modal = new bootstrap.Modal(document.getElementById('markAttendanceModal'));
            modal.show();
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Trigger initial state
            const event = new Event('change');
            document.getElementById('statusSelect')?.dispatchEvent(event);
        });
    </script>
</body>
</html>

