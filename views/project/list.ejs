<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-info shadow-sm">
        <div class="container-fluid">
            <div>
                <a href="/dashboard" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <span class="navbar-brand mb-0 h1">Projects</span>
            </div>
            <% if (userRole === 'admin') { %>
            <a href="/project/create" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> <span class="d-none d-sm-inline">New Project</span>
            </a>
            <% } %>
        </div>
    </nav>

    <div class="container my-4">
        <!-- Search & Filter -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/project" method="GET" class="row g-3">
                    <div class="col-12 col-md-6">
                        <input type="text" class="form-control" placeholder="Search by project name or location..." 
                               name="search" value="<%= search || '' %>">
                    </div>
                    <div class="col-12 col-md-3">
                        <select class="form-select" name="status">
                            <option value="">All Status</option>
                            <option value="active" <%= status === 'active' ? 'selected' : '' %>>Active</option>
                            <option value="inactive" <%= status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="bi bi-search"></i> Search
                            </button>
                            <% if (search || status) { %>
                            <a href="/project" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i>
                            </a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Projects Grid -->
        <% if (projects.length === 0) { %>
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-building fs-1 text-muted"></i>
                <p class="text-muted mt-3">No projects found</p>
                <% if (userRole === 'admin') { %>
                <a href="/project/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create First Project
                </a>
                <% } %>
            </div>
        </div>
        <% } else { %>
        <div class="row g-4">
            <% projects.forEach(project => { %>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm <%= !project.isActive ? 'opacity-75' : '' %>">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title text-info mb-0">
                                <i class="bi bi-building"></i>
                                <%= project.projectName %>
                            </h5>
                            <span class="badge bg-<%= project.isActive ? 'success' : 'secondary' %>">
                                <%= project.isActive ? 'Active' : 'Inactive' %>
                            </span>
                        </div>
                        
                        <p class="text-muted mb-2">
                            <i class="bi bi-geo-alt"></i> <%= project.location %>
                        </p>
                        
                        <% if (project.description) { %>
                        <p class="card-text small text-muted mb-3">
                            <%= project.description.substring(0, 100) %><%= project.description.length > 100 ? '...' : '' %>
                        </p>
                        <% } %>
                        
                        <hr>
                        
                        <div class="row text-center g-2 mb-3">
                            <div class="col-6">
                                <small class="text-muted d-block">Total Plots</small>
                                <strong class="h5 mb-0"><%= project.totalPlots %></strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Available</small>
                                <strong class="h5 mb-0 text-<%= project.availablePlots > 0 ? 'success' : 'danger' %>">
                                    <%= project.availablePlots %>
                                </strong>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <a href="/project/<%= project.id %>" class="btn btn-sm btn-info flex-fill">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <% if (userRole === 'admin') { %>
                            <a href="/project/<%= project.id %>/edit" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-muted small">
                        <i class="bi bi-calendar"></i> 
                        <%= new Date(project.createdAt).toLocaleDateString('en-IN') %>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

