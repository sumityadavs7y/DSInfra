<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.projectName %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-info shadow-sm">
        <div class="container-fluid">
            <div>
                <a href="/project" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <span class="navbar-brand mb-0 h1">Project Details</span>
            </div>
            <% if (userRole === 'admin') { %>
            <a href="/project/<%= project.id %>/edit" class="btn btn-warning">
                <i class="bi bi-pencil"></i> <span class="d-none d-sm-inline">Edit</span>
            </a>
            <% } %>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <!-- Project Info Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-8 mb-2 mb-md-0">
                                <h3 class="h4 mb-1 text-info">
                                    <i class="bi bi-building"></i> <%= project.projectName %>
                                </h3>
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i> <%= project.location %>
                                </small>
                            </div>
                            <div class="col-12 col-md-4 text-md-end">
                                <span class="badge bg-<%= project.isActive ? 'success' : 'secondary' %> px-3 py-2">
                                    <%= project.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <% if (project.description) { %>
                        <h5 class="text-info mb-3"><i class="bi bi-info-circle"></i> Description</h5>
                        <p class="text-muted mb-4"><%= project.description %></p>
                        <hr>
                        <% } %>
                        
                        <h5 class="text-info mb-3"><i class="bi bi-grid-3x3"></i> Plot Information</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-6 col-md-3">
                                <label class="text-muted small fw-semibold text-uppercase">Total Plots</label>
                                <p class="h4 mb-0"><%= project.totalPlots %></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small fw-semibold text-uppercase">Available</label>
                                <p class="h4 mb-0 text-<%= project.availablePlots > 0 ? 'success' : 'danger' %>">
                                    <%= project.availablePlots %>
                                </p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small fw-semibold text-uppercase">Booked</label>
                                <p class="h4 mb-0 text-primary">
                                    <%= project.totalPlots - project.availablePlots %>
                                </p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small fw-semibold text-uppercase">Occupancy</label>
                                <p class="h4 mb-0">
                                    <%= Math.round(((project.totalPlots - project.availablePlots) / project.totalPlots) * 100) %>%
                                </p>
                            </div>
                        </div>
                        
                        <% if (stats.totalBookings > 0) { %>
                        <hr>
                        <h5 class="text-info mb-3"><i class="bi bi-bar-chart"></i> Booking Statistics</h5>
                        <div class="row g-3">
                            <div class="col-6 col-md-3">
                                <label class="text-muted small fw-semibold text-uppercase">Total Bookings</label>
                                <p class="h5 mb-0"><%= stats.totalBookings %></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small fw-semibold text-uppercase">Active</label>
                                <p class="h5 mb-0 text-success"><%= stats.activeBookings %></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small fw-semibold text-uppercase">Completed</label>
                                <p class="h5 mb-0 text-info"><%= stats.completedBookings %></p>
                            </div>
                            <div class="col-6 col-md-3">
                                <label class="text-muted small fw-semibold text-uppercase">Total Revenue</label>
                                <p class="h5 mb-0">₹<%= stats.totalRevenue.toLocaleString('en-IN') %></p>
                            </div>
                        </div>
                        <% } %>
                    </div>
                    <div class="card-footer bg-light text-muted small">
                        Created on <%= new Date(project.createdAt).toLocaleString('en-IN') %>
                    </div>
                </div>

                <!-- Bookings List -->
                <% if (bookings.length > 0) { %>
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="text-info mb-3">
                            <i class="bi bi-journal-check"></i> Bookings (<%= bookings.length %>)
                        </h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Booking No</th>
                                        <th>Customer</th>
                                        <th class="d-none d-md-table-cell">Plot No</th>
                                        <th class="d-none d-lg-table-cell">Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bookings.forEach(booking => { %>
                                    <tr>
                                        <td><strong><%= booking.bookingNo %></strong></td>
                                        <td><%= booking.customer.applicantName %></td>
                                        <td class="d-none d-md-table-cell"><%= booking.plotNo %></td>
                                        <td class="d-none d-lg-table-cell">
                                            <%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %>
                                        </td>
                                        <td>₹<%= parseFloat(booking.totalAmount).toLocaleString('en-IN') %></td>
                                        <td>
                                            <span class="badge bg-<%= booking.status === 'Active' ? 'success' : booking.status === 'Completed' ? 'info' : 'danger' %>">
                                                <%= booking.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/booking/<%= booking.id %>" class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% } else { %>
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-journal-x fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No bookings for this project yet</p>
                        <a href="/booking/create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create First Booking
                        </a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

