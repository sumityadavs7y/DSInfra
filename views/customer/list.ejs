<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
        <%- include('../partials/page-header', { 
        title: 'Customers', 
        icon: 'bi-people-fill', 
        backUrl: '/dashboard', 
        actionUrl: '/customer/create', 
        actionText: 'New Customer', 
        actionIcon: 'bi-person-plus'
    }) %>

    <div class="container my-4">
        <!-- Stats -->
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-primary"><%= customers.length %></h3>
                        <p class="text-muted small mb-0">Total Customers</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-success"><%= customers.filter(c => c.isActive).length %></h3>
                        <p class="text-muted small mb-0">Active</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Card -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <h5 class="mb-0">All Customers</h5>
                    </div>
                    <div class="col-12 col-md-6 mt-2 mt-md-0">
                        <input type="text" class="form-control" id="searchBox" 
                               placeholder="ðŸ” Search by name, mobile, Aadhaar...">
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover" id="customerTable">
                        <thead class="table-light">
                            <tr>
                                <th>Customer No</th>
                                <th>Name</th>
                                <th class="d-none d-md-table-cell">Father/Husband</th>
                                <th>Mobile</th>
                                <th class="d-none d-lg-table-cell">Aadhaar</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% customers.forEach(customer => { %>
                                <tr>
                                    <td><strong><%= customer.customerNo %></strong></td>
                                    <td><%= customer.applicantName %></td>
                                    <td class="d-none d-md-table-cell"><%= customer.fatherOrHusbandName %></td>
                                    <td><%= customer.mobileNo %></td>
                                    <td class="d-none d-lg-table-cell"><%= customer.aadhaarNo %></td>
                                    <td>
                                        <span class="badge bg-<%= customer.isActive ? 'success' : 'danger' %>">
                                            <%= customer.isActive ? 'Active' : 'Inactive' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/customer/<%= customer.id %>" class="btn btn-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/customer/<%= customer.id %>/edit" class="btn btn-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('searchBox').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#customerTable tbody tr');
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
