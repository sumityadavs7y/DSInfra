<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer <%= customer.customerNo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <div>
                <a href="/customer" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <span class="navbar-brand mb-0 h1">Customer Details</span>
            </div>
            <a href="/customer/<%= customer.id %>/edit" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0 text-primary"><%= customer.customerNo %></h3>
                            <span class="badge bg-<%= customer.isActive ? 'success' : 'danger' %> px-3 py-2">
                                <%= customer.isActive ? 'Active' : 'Inactive' %>
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Name</label>
                                <p class="h5 mb-0"><%= customer.applicantName %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Father/Husband Name</label>
                                <p class="h5 mb-0"><%= customer.fatherOrHusbandName %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Mobile</label>
                                <p class="h5 mb-0"><%= customer.mobileNo %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Aadhaar</label>
                                <p class="h5 mb-0"><%= customer.aadhaarNo %></p>
                            </div>
                            <% if (customer.email) { %>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Email</label>
                                <p class="h5 mb-0"><%= customer.email %></p>
                            </div>
                            <% } %>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Address</label>
                                <p class="h5 mb-0"><%= customer.address %></p>
                            </div>
                            <% if (customer.isBroker) { %>
                            <div class="col-12">
                                <hr class="my-3">
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-briefcase"></i> <strong>This customer is also a broker</strong>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Bookings as Customer -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-journal-text"></i> Bookings as Customer (<%= customerBookings.length %>)
                        </h5>
                        <% if (customerBookings.length === 0) { %>
                            <p class="text-muted text-center py-3">No bookings as customer</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Booking No</th>
                                            <th class="d-none d-md-table-cell">Date</th>
                                            <th>Project</th>
                                            <th>Plot</th>
                                            <th class="d-none d-lg-table-cell">Amount</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% customerBookings.forEach(booking => { %>
                                            <tr>
                                                <td><strong><%= booking.bookingNo %></strong></td>
                                                <td class="d-none d-md-table-cell"><%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %></td>
                                                <td><%= booking.project.projectName %></td>
                                                <td><%= booking.plotNo %></td>
                                                <td class="d-none d-lg-table-cell">₹<%= parseFloat(booking.totalAmount).toLocaleString('en-IN') %></td>
                                                <td>
                                                    <span class="badge bg-<%= booking.status === 'Active' ? 'success' : booking.status === 'Completed' ? 'info' : 'danger' %>">
                                                        <%= booking.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/booking/<%= booking.id %>" class="btn btn-sm btn-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Bookings as Broker (if customer is broker) -->
                <% if (customer.isBroker) { %>
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-header bg-dark text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-briefcase"></i> Bookings as Broker (<%= brokerBookings.length %>)
                            </h5>
                            <span class="badge bg-warning text-dark px-3 py-2">
                                Total Commission: ₹<%= totalCommission.toLocaleString('en-IN') %>
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <% if (brokerBookings.length === 0) { %>
                            <p class="text-muted text-center py-3">No bookings as broker yet</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Booking No</th>
                                            <th class="d-none d-md-table-cell">Date</th>
                                            <th>Customer</th>
                                            <th>Project</th>
                                            <th>Plot</th>
                                            <th class="d-none d-lg-table-cell">Commission</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% brokerBookings.forEach(booking => { %>
                                            <tr>
                                                <td><strong><%= booking.bookingNo %></strong></td>
                                                <td class="d-none d-md-table-cell"><%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %></td>
                                                <td><%= booking.customer.applicantName %></td>
                                                <td><%= booking.project.projectName %></td>
                                                <td><%= booking.plotNo %></td>
                                                <td class="d-none d-lg-table-cell fw-bold text-success">
                                                    ₹<%= parseFloat(booking.brokerCommission || 0).toLocaleString('en-IN') %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= booking.status === 'Active' ? 'success' : booking.status === 'Completed' ? 'info' : 'danger' %>">
                                                        <%= booking.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/booking/<%= booking.id %>" class="btn btn-sm btn-dark">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                    <tfoot class="table-light">
                                        <tr>
                                            <th colspan="5" class="text-end">Total Commission:</th>
                                            <th class="d-none d-lg-table-cell fw-bold text-success">
                                                ₹<%= totalCommission.toLocaleString('en-IN') %>
                                            </th>
                                            <th colspan="2" class="d-lg-none fw-bold text-success">
                                                ₹<%= totalCommission.toLocaleString('en-IN') %>
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
