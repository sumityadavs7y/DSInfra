<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer <%= customer.customerNo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
        <%- include('../partials/page-header', { 
        title: 'Customer Details', 
        icon: 'bi-person-badge', 
        backUrl: '/customer', 
        actionUrl: '/customer/' + customer.id + '/edit', 
        actionText: 'Edit', 
        actionIcon: 'bi-pencil'
    }) %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0 text-primary"><%= customer.customerNo %></h3>
                            <span class="badge bg-<%= customer.isActive ? 'success' : 'danger' %> px-3 py-2">
                                <%= customer.isActive ? 'Active' : 'Inactive' %>
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Name</label>
                                <p class="h5 mb-0"><%= customer.applicantName %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Father/Husband Name</label>
                                <p class="h5 mb-0"><%= customer.fatherOrHusbandName %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Mobile</label>
                                <p class="h5 mb-0"><%= customer.mobileNo %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Aadhaar</label>
                                <p class="h5 mb-0"><%= customer.aadhaarNo %></p>
                            </div>
                            <% if (customer.email) { %>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Email</label>
                                <p class="h5 mb-0"><%= customer.email %></p>
                            </div>
                            <% } %>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Address</label>
                                <p class="h5 mb-0"><%= customer.address %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Bookings -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-journal-text"></i> Bookings (<%= bookings.length %>)
                        </h5>
                        <% if (bookings.length === 0) { %>
                            <p class="text-muted text-center py-3">No bookings yet</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Booking No</th>
                                            <th class="d-none d-md-table-cell">Date</th>
                                            <th>Project</th>
                                            <th>Plot</th>
                                            <th class="d-none d-lg-table-cell">Amount</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% bookings.forEach(booking => { %>
                                            <tr>
                                                <td><strong><%= booking.bookingNo %></strong></td>
                                                <td class="d-none d-md-table-cell"><%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %></td>
                                                <td><%= booking.project.projectName %></td>
                                                <td><%= booking.plotNo %></td>
                                                <td class="d-none d-lg-table-cell">â‚¹<%= parseFloat(booking.totalAmount).toLocaleString('en-IN') %></td>
                                                <td>
                                                    <span class="badge bg-<%= booking.status === 'Active' ? 'success' : 'danger' %>">
                                                        <%= booking.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/booking/<%= booking.id %>" class="btn btn-sm btn-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
