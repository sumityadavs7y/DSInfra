<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receipt <%= payment.receiptNo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
        <%- include('../partials/page-header', { 
        title: 'Payment Details', 
        icon: 'bi-receipt-cutoff', 
        backUrl: '/payment', 
        actionUrl: userRole !== 'associate' ? '/payment/' + payment.id + '/edit' : '', 
        actionText: userRole !== 'associate' ? 'Edit' : '', 
        actionIcon: 'bi-pencil'
    }) %>

    <!-- Action Buttons -->
    <div class="container my-3">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <a href="/payment/<%= payment.id %>/slip" target="_blank" class="btn btn-success">
                    <i class="bi bi-printer"></i> Print Payment Receipt
                </a>
            </div>
        </div>
    </div>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <!-- Receipt Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-8 mb-2 mb-md-0">
                                <h3 class="h4 mb-1 text-success"><i class="bi bi-receipt"></i> <%= payment.receiptNo %></h3>
                                <small class="text-muted">
                                    <%= new Date(payment.receiptDate).toLocaleDateString('en-IN', { 
                                        year: 'numeric', month: 'long', day: 'numeric'
                                    }) %>
                                </small>
                            </div>
                            <div class="col-12 col-md-4 text-md-end">
                                <% if (payment.isDeleted) { %>
                                <span class="badge bg-danger px-3 py-2 me-2">
                                    Deleted
                                </span>
                                <% } %>
                                <span class="badge bg-success px-3 py-2">
                                    <%= payment.paymentType %>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <!-- Customer Details -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="text-success mb-0"><i class="bi bi-person"></i> Customer Details</h5>
                            <a href="/customer/<%= payment.booking.customer.id %>" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-person-circle"></i> View Profile
                            </a>
                        </div>
                        <div class="row g-3 mb-4">
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Customer No</label>
                                <p class="h6 mb-0"><%= payment.booking.customer.customerNo %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Name</label>
                                <p class="h6 mb-0"><%= payment.booking.customer.applicantName %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Mobile</label>
                                <p class="h6 mb-0"><%= payment.booking.customer.mobileNo %></p>
                            </div>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Address</label>
                                <p class="h6 mb-0"><%= payment.booking.customer.address %></p>
                            </div>
                        </div>

                        <hr>

                        <!-- Booking Details -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="text-success mb-0"><i class="bi bi-journal-check"></i> Booking Details</h5>
                            <a href="/booking/<%= payment.booking.id %>" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-receipt-cutoff"></i> View Booking
                            </a>
                        </div>
                        <div class="row g-3 mb-4">
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Booking No</label>
                                <p class="h6 mb-0"><%= payment.booking.bookingNo %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Project</label>
                                <p class="h6 mb-0"><%= payment.booking.project.projectName %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Plot No</label>
                                <p class="h5 mb-0 text-primary"><%= payment.booking.plotNo %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Total Amount</label>
                                <p class="h6 mb-0">₹<%= parseFloat(payment.booking.totalAmount).toLocaleString('en-IN') %></p>
                            </div>
                        </div>

                        <hr>

                        <!-- Payment Details -->
                        <h5 class="text-success mb-3"><i class="bi bi-credit-card"></i> Payment Details</h5>
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <h3 class="text-success mb-1">₹<%= parseFloat(payment.paymentAmount).toLocaleString('en-IN') %></h3>
                                        <p class="text-muted small mb-0">Amount Received</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Payment Mode</label>
                                <p class="h6 mb-0"><%= payment.paymentMode %></p>
                            </div>
                            <% if (payment.transactionNo) { %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Transaction No</label>
                                <p class="h6 mb-0"><%= payment.transactionNo %></p>
                            </div>
                            <% } %>
                            <% if (payment.isRecurring && payment.installmentNumber) { %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Installment Number</label>
                                <p class="h6 mb-0"><%= payment.installmentNumber %></p>
                            </div>
                            <% } %>
                            <% if (payment.remarks) { %>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Remarks</label>
                                <p class="h6 mb-0"><%= payment.remarks %></p>
                            </div>
                            <% } %>
                        </div>

                        <hr>

                        <!-- Balance Details -->
                        <h5 class="text-success mb-3"><i class="bi bi-wallet"></i> Balance Details</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-6 col-md-4">
                                <label class="text-muted small fw-semibold text-uppercase">Before Payment</label>
                                <p class="h5 mb-0">₹<%= parseFloat(payment.balanceBeforePayment).toLocaleString('en-IN') %></p>
                            </div>
                            <div class="col-6 col-md-4">
                                <label class="text-muted small fw-semibold text-uppercase">After Payment</label>
                                <p class="h5 mb-0 text-<%= payment.balanceAfterPayment == 0 ? 'success' : 'warning' %>">
                                    ₹<%= parseFloat(payment.balanceAfterPayment).toLocaleString('en-IN') %>
                                </p>
                            </div>
                        </div>

                        <% if (payment.balanceAfterPayment == 0) { %>
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> <strong>Booking Completed!</strong> All payments have been received.
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- Payment History -->
                <% if (allPayments.length > 1) { %>
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="text-success mb-3"><i class="bi bi-clock-history"></i> Payment History</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Receipt No</th>
                                        <th>Amount</th>
                                        <th>Mode</th>
                                        <th>Type</th>
                                        <th>Balance After</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% allPayments.forEach(p => { %>
                                        <tr class="<%= p.id === payment.id ? 'table-success' : '' %>">
                                            <td><%= new Date(p.receiptDate).toLocaleDateString('en-IN') %></td>
                                            <td><strong><%= p.receiptNo %></strong></td>
                                            <td>₹<%= parseFloat(p.paymentAmount).toLocaleString('en-IN') %></td>
                                            <td><%= p.paymentMode %></td>
                                            <td><%= p.paymentType %></td>
                                            <td class="<%= p.balanceAfterPayment == 0 ? 'text-success fw-bold' : '' %>">
                                                ₹<%= parseFloat(p.balanceAfterPayment).toLocaleString('en-IN') %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

