<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payments</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
        <%- include('../partials/page-header', { 
        title: 'Payments', 
        icon: 'bi-cash-stack', 
        backUrl: '/dashboard', 
        actionUrl: userRole !== 'associate' && userRole !== 'team_leader' ? '/payment/create' : '', 
        actionText: userRole !== 'associate' && userRole !== 'team_leader' ? 'New Payment' : '', 
        actionIcon: 'bi-plus-circle'
    }) %>

    <div class="container my-4">
        <!-- Show/Hide Deleted Toggle -->
        <% if (userRole !== 'associate' && userRole !== 'team_leader') { %>
        <div class="mb-3">
            <% if (showDeleted) { %>
                <a href="/payment" class="btn btn-outline-danger">
                    <i class="bi bi-eye-slash"></i> Hide Deleted
                </a>
            <% } else { %>
                <a href="/payment?showDeleted=true" class="btn btn-outline-secondary">
                    <i class="bi bi-trash"></i> Show Deleted
                </a>
            <% } %>
        </div>
        <% } %>

        <!-- Stats -->
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-success"><%= payments.length %></h3>
                        <p class="text-muted small mb-0">Total Payments</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h2 fw-bold text-primary">â‚¹<%= payments.reduce((sum, p) => sum + parseFloat(p.paymentAmount), 0).toLocaleString('en-IN') %></h3>
                        <p class="text-muted small mb-0">Total Collected</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Card -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-12 col-md-6">
                        <h5 class="mb-0">All Payments</h5>
                    </div>
                    <div class="col-12 col-md-6 mt-2 mt-md-0">
                        <input type="text" class="form-control" id="searchBox" 
                               placeholder="ðŸ” Search by receipt no, customer, booking...">
                    </div>
                </div>

                <% if (payments.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="bi bi-receipt fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No payments recorded</p>
                        <a href="/payment/create" class="btn btn-success">Record First Payment</a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover" id="paymentTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Receipt No</th>
                                    <th class="d-none d-md-table-cell">Date</th>
                                    <th>Customer</th>
                                    <th class="d-none d-lg-table-cell">Booking No</th>
                                    <th>Amount</th>
                                    <th class="d-none d-md-table-cell">Mode</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% payments.forEach(payment => { %>
                                    <tr>
                                        <td><strong><%= payment.receiptNo %></strong></td>
                                        <td class="d-none d-md-table-cell"><%= new Date(payment.receiptDate).toLocaleDateString('en-IN') %></td>
                                        <td><%= payment.booking.customer.applicantName %></td>
                                        <td class="d-none d-lg-table-cell"><%= payment.booking.bookingNo %></td>
                                        <td class="fw-bold text-success">â‚¹<%= parseFloat(payment.paymentAmount).toLocaleString('en-IN') %></td>
                                        <td class="d-none d-md-table-cell"><%= payment.paymentMode %></td>
                                        <td>
                                            <% if (payment.isDeleted) { %>
                                            <span class="badge bg-danger">Deleted</span>
                                            <% } else { %>
                                            <span class="badge bg-success">Active</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/payment/<%= payment.id %>" class="btn btn-outline-dark" title="View Payment">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <% if (userRole !== 'associate' && userRole !== 'team_leader' && !payment.isDeleted) { %>
                                                <a href="/payment/<%= payment.id %>/edit" class="btn btn-outline-primary" title="Edit Payment">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger" title="Delete Payment"
                                                        onclick="if(confirm('Delete this payment?')) { 
                                                            const form = document.createElement('form'); 
                                                            form.method = 'POST'; 
                                                            form.action = '/payment/<%= payment.id %>/delete'; 
                                                            document.body.appendChild(form); 
                                                            form.submit(); 
                                                        }">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('searchBox')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#paymentTable tbody tr');
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
</body>
</html>

