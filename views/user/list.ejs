<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .table-dark th {
            background-color: #212529 !important;
            user-select: none;
        }
        .table-dark th:hover {
            background-color: #2c3034 !important;
        }
        .table-dark th a {
            display: inline-block;
            width: 100%;
            color: #fff !important;
            text-decoration: none;
            background-color: transparent !important;
        }
        .table-dark th a:hover,
        .table-dark th a:focus,
        .table-dark th a:active,
        .table-dark th a:visited {
            color: #fff !important;
            text-decoration: none !important;
            background-color: transparent !important;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/page-header', { 
        title: 'User Management', 
        icon: 'bi-people-fill',
        backUrl: '/dashboard',
        actionUrl: '/user/create',
        actionText: 'New User',
        actionIcon: 'bi-person-plus'
    }) %>

    <div class="container my-4">
        <!-- Success/Error Messages -->
        <% if (successMessage) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> <%= successMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (errorMessage) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> <%= errorMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Search & Filter -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/user" method="GET" id="searchForm">
                    <div class="row g-3 align-items-center">
                        <div class="col-12 col-md-8">
                            <input type="text" class="form-control" name="search" placeholder="Search by name, email, or role..." value="">
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <a href="/user" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Users Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <% if (users.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="bi bi-person-x fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No users found</p>
                        <a href="/user/create" class="btn btn-dark">
                            <i class="bi bi-person-plus"></i> Add First User
                        </a>
                    </div>
                <% } else { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Created</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><strong>#<%= user.id %></strong></td>
                                    <td>
                                        <i class="bi bi-person-circle text-primary"></i>
                                        <strong><%= user.name %></strong>
                                    </td>
                                    <td>
                                        <i class="bi bi-envelope"></i>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <% if (user.role === 'admin') { %>
                                            <span class="badge bg-primary">
                                                <i class="bi bi-shield-check"></i> Admin
                                            </span>
                                        <% } else if (user.role === 'manager') { %>
                                            <span class="badge bg-info">
                                                <i class="bi bi-person-badge"></i> Manager
                                            </span>
                                        <% } else if (user.role === 'employee') { %>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-person-fill"></i> Employee
                                            </span>
                                        <% } else if (user.role === 'user') { %>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-person"></i> User
                                            </span>
                                        <% } else { %>
                                            <span class="badge bg-warning">
                                                <%= user.role %>
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <%= new Date(user.createdAt).toLocaleDateString('en-IN') %>
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/user/<%= user.id %>/edit" 
                                               class="btn btn-outline-primary" 
                                               title="Edit User">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="/user/<%= user.id %>/reset-password" 
                                               class="btn btn-outline-warning" 
                                               title="Reset Password">
                                                <i class="bi bi-key"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    title="Delete User"
                                                    onclick="deleteUser(<%= user.id %>, '<%= user.name %>')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Total Count -->
        <div class="mt-3 text-muted text-center">
            <small>Total Users: <strong><%= users.length %></strong></small>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill text-warning"></i>
                        Confirm Delete
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete user <strong id="deleteUserName"></strong>?</p>
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-circle"></i>
                        This action cannot be undone!
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete User
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteUser(userId, userName) {
            document.getElementById('deleteUserName').textContent = userName;
            document.getElementById('deleteForm').action = `/user/${userId}/delete`;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
</body>
</html>

