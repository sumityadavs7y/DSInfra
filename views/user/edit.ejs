<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-light">
    <%- include('../partials/page-header', { 
        title: 'Edit User', 
        icon: 'bi-pencil-square',
        backUrl: '/user'
    }) %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <% if (errorMessage) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle-fill"></i> <%= errorMessage %>
                            </div>
                        <% } %>

                        <form method="POST" action="/user/<%= user.id %>/edit">
                            <div class="mb-3">
                                <label for="name" class="form-label">
                                    <i class="bi bi-person"></i> Full Name
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="name" 
                                       name="name" 
                                       value="<%= user.name %>"
                                       required
                                       placeholder="Enter full name">
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email Address
                                </label>
                                <input type="email" 
                                       class="form-control" 
                                       id="email" 
                                       name="email" 
                                       value="<%= user.email %>"
                                       required
                                       placeholder="Enter email address">
                            </div>

                            <div class="mb-3">
                                <label for="role" class="form-label">
                                    <i class="bi bi-shield-check"></i> Role
                                </label>
                                <select class="form-select" id="role" name="role" required onchange="toggleBrokerSelection()">
                                    <option value="">Select Role</option>
                                    <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                                    <option value="manager" <%= user.role === 'manager' ? 'selected' : '' %>>Manager</option>
                                    <option value="employee" <%= user.role === 'employee' ? 'selected' : '' %>>Employee</option>
                                    <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                                    <option value="associate" <%= user.role === 'associate' ? 'selected' : '' %>>Partner Login (View Only)</option>
                                </select>
                            </div>

                            <div class="mb-4" id="brokerSelectionDiv" style="display: none;">
                                <label for="brokerIds" class="form-label">
                                    <i class="bi bi-briefcase"></i> Select Partners to View <span class="text-danger">*</span>
                                </label>
                                <select class="form-select" id="brokerIds" name="brokerIds" multiple size="8">
                                    <% if (typeof brokers !== 'undefined' && brokers.length > 0) { %>
                                        <% brokers.forEach(broker => { %>
                                            <option value="<%= broker.id %>" <%= (typeof userBrokerIds !== 'undefined' && userBrokerIds.includes(broker.id)) ? 'selected' : '' %>><%= broker.brokerNo %> - <%= broker.name %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <option disabled>No partners available</option>
                                    <% } %>
                                </select>
                                <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple partners</small>
                            </div>

                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i>
                                To change password, use the <strong>Reset Password</strong> option from the user list.
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Update User
                                </button>
                                <a href="/user" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm mt-3">
                    <div class="card-body">
                        <h6 class="mb-3">Quick Actions</h6>
                        <div class="d-grid gap-2">
                            <a href="/user/<%= user.id %>/reset-password" class="btn btn-outline-warning">
                                <i class="bi bi-key"></i> Reset Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleBrokerSelection() {
            const roleSelect = document.getElementById('role');
            const brokerDiv = document.getElementById('brokerSelectionDiv');
            const brokerSelect = document.getElementById('brokerIds');
            
            if (roleSelect.value === 'associate') {
                brokerDiv.style.display = 'block';
                brokerSelect.required = true;
            } else {
                brokerDiv.style.display = 'none';
                brokerSelect.required = false;
            }
        }

        // Run on page load to handle any pre-selected values
        document.addEventListener('DOMContentLoaded', function() {
            toggleBrokerSelection();
        });
    </script>
</body>
</html>

