<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/custom.css">
</head>
<body class="bg-light">
    <%- include('../partials/page-header', { 
        title: 'Create New User', 
        icon: 'bi-person-plus-fill',
        backUrl: '/user'
    }) %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <% if (errorMessage) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle-fill"></i> <%= errorMessage %>
                            </div>
                        <% } %>

                        <form method="POST" action="/user/create">
                            <div class="mb-3">
                                <label for="name" class="form-label">
                                    <i class="bi bi-person"></i> Full Name
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="name" 
                                       name="name" 
                                       required
                                       placeholder="Enter full name">
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email Address
                                </label>
                                <input type="email" 
                                       class="form-control" 
                                       id="email" 
                                       name="email" 
                                       required
                                       placeholder="Enter email address">
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">
                                    <i class="bi bi-lock"></i> Password
                                </label>
                                <input type="password" 
                                       class="form-control" 
                                       id="password" 
                                       name="password" 
                                       required
                                       minlength="6"
                                       placeholder="Enter password (min 6 characters)">
                                <small class="text-muted">Password must be at least 6 characters long</small>
                            </div>

                            <div class="mb-3">
                                <label for="role" class="form-label">
                                    <i class="bi bi-shield-check"></i> Role
                                </label>
                                <select class="form-select" id="role" name="role" required onchange="toggleRoleSelection()">
                                    <option value="">Select Role</option>
                                    <option value="admin">Admin</option>
                                    <option value="manager">Manager</option>
                                    <option value="employee">Employee</option>
                                    <option value="user">User</option>
                                    <option value="associate">Partner Login (View Only)</option>
                                    <option value="team_leader">Team Leader (View Only)</option>
                                    <option value="farmer">Farmer Login (View Only)</option>
                                </select>
                            </div>

                            <div class="mb-4" id="brokerSelectionDiv" style="display: none;">
                                <label for="brokerIds" class="form-label">
                                    <i class="bi bi-briefcase"></i> Select Partners to View <span class="text-danger">*</span>
                                </label>
                                <select class="form-select" id="brokerIds" name="brokerIds" multiple size="8">
                                    <% if (typeof brokers !== 'undefined' && brokers.length > 0) { %>
                                        <% brokers.forEach(broker => { %>
                                            <option value="<%= broker.id %>"><%= broker.brokerNo %> - <%= broker.name %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <option disabled>No partners available</option>
                                    <% } %>
                                </select>
                                <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple partners</small>
                            </div>

                            <div class="mb-4" id="farmerProjectSelectionDiv" style="display: none;">
                                <label for="farmerProjectIds" class="form-label">
                                    <i class="bi bi-folder"></i> Select Farmer Projects to View <span class="text-danger">*</span>
                                </label>
                                <select class="form-select" id="farmerProjectIds" name="farmerProjectIds" multiple size="8">
                                    <% if (typeof farmerProjects !== 'undefined' && farmerProjects.length > 0) { %>
                                        <% farmerProjects.forEach(project => { %>
                                            <option value="<%= project.id %>"><%= project.name %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <option disabled>No farmer projects available</option>
                                    <% } %>
                                </select>
                                <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple projects</small>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create User
                                </button>
                                <a href="/user" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleRoleSelection() {
            const roleSelect = document.getElementById('role');
            const brokerDiv = document.getElementById('brokerSelectionDiv');
            const brokerSelect = document.getElementById('brokerIds');
            const farmerProjectDiv = document.getElementById('farmerProjectSelectionDiv');
            const farmerProjectSelect = document.getElementById('farmerProjectIds');
            
            // Hide all role-specific selections first
            brokerDiv.style.display = 'none';
            brokerSelect.required = false;
            brokerSelect.selectedIndex = -1;
            
            farmerProjectDiv.style.display = 'none';
            farmerProjectSelect.required = false;
            farmerProjectSelect.selectedIndex = -1;
            
            // Show the appropriate selection based on role
            if (roleSelect.value === 'associate' || roleSelect.value === 'team_leader') {
                brokerDiv.style.display = 'block';
                brokerSelect.required = true;
            } else if (roleSelect.value === 'farmer') {
                farmerProjectDiv.style.display = 'block';
                farmerProjectSelect.required = true;
            }
        }

        // Run on page load to handle any pre-selected values
        document.addEventListener('DOMContentLoaded', function() {
            toggleRoleSelection();
        });
    </script>
</body>
</html>

