<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team <%= team.teamNo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-light shadow-sm" style="background: linear-gradient(135deg, #ffffff 0%, #f5f7fa 100%); border-bottom: 3px solid #e0e0e0;">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a href="/team" class="btn btn-outline-secondary btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <img src="/images/logo.png" alt="Logo" style="height: 30px; width: auto; margin-right: 10px;">
                <span class="navbar-brand mb-0 h1">
                    <i class="bi bi-people-fill"></i> Team Details
                </span>
            </div>
            <div class="d-flex gap-2">
                <% if (!team.isDeleted) { %>
                <a href="/team/edit/<%= team.id %>" class="btn btn-dark">
                    <i class="bi bi-pencil"></i> <span class="d-none d-sm-inline">Edit Team</span>
                </a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <!-- Team Info Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-8 mb-2 mb-md-0">
                                <h3 class="h4 mb-1 text-primary"><%= team.teamNo %></h3>
                                <small class="text-muted">
                                    Created <%= new Date(team.createdAt).toLocaleDateString('en-IN', { 
                                        year: 'numeric', month: 'long', day: 'numeric'
                                    }) %>
                                </small>
                            </div>
                            <div class="col-12 col-md-4 text-md-end">
                                <% if (team.isDeleted) { %>
                                    <span class="badge bg-danger px-3 py-2">Deleted</span>
                                <% } else if (team.isActive) { %>
                                    <span class="badge bg-success px-3 py-2">Active</span>
                                <% } else { %>
                                    <span class="badge bg-secondary px-3 py-2">Inactive</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Team Name</label>
                                <p class="h5 mb-0"><%= team.name %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Total Partners</label>
                                <p class="h5 mb-0"><span class="badge bg-info"><%= team.associates.length %> Members</span></p>
                            </div>
                            <% if (team.description) { %>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Description</label>
                                <p class="mb-0"><%= team.description %></p>
                            </div>
                            <% } %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Created By</label>
                                <p class="mb-0"><%= team.creator ? team.creator.name : 'N/A' %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-4"><i class="bi bi-graph-up"></i> Overall Team Statistics</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-6 col-md-3">
                                <div class="text-center p-3 bg-light rounded">
                                    <div class="h2 text-primary mb-1"><%= stats.totalBookings %></div>
                                    <small class="text-muted text-uppercase">Total Bookings</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-3 bg-light rounded">
                                    <div class="h2 text-success mb-1"><%= stats.registeredBookings %></div>
                                    <small class="text-muted text-uppercase">Registered</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-3 bg-light rounded">
                                    <div class="h2 text-warning mb-1"><%= stats.unregisteredBookings %></div>
                                    <small class="text-muted text-uppercase">Unregistered</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-3 bg-light rounded">
                                    <div class="h5 text-dark mb-1">₹<%= stats.totalCommission.toLocaleString('en-IN') %></div>
                                    <small class="text-muted text-uppercase">Total Commission</small>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <div class="text-center p-4 bg-info bg-opacity-10 border border-info rounded">
                                    <div class="h2 text-info mb-1">
                                        <i class="bi bi-rulers"></i> <%= stats.totalArea.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %> sq. ft.
                                    </div>
                                    <small class="text-muted text-uppercase fw-bold">Total Area Selling</small>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <h6 class="text-muted mb-3"><i class="bi bi-cash-stack"></i> Financial Breakdown</h6>
                        <div class="row g-3">
                            <div class="col-6 col-md-4">
                                <label class="text-muted small fw-semibold text-uppercase">Commission (Registered)</label>
                                <p class="h6 text-success mb-0">₹<%= stats.totalCommissionRegistered.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
                            </div>
                            <div class="col-6 col-md-4">
                                <label class="text-muted small fw-semibold text-uppercase">Commission (Unregistered)</label>
                                <p class="h6 text-warning mb-0">₹<%= stats.totalCommissionUnregistered.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
                            </div>
                            <div class="col-12 col-md-4">
                                <label class="text-muted small fw-semibold text-uppercase">Total Booking Amount</label>
                                <p class="h6 text-info mb-0">₹<%= stats.totalBookingAmount.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Broker Payment Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-4"><i class="bi bi-cash-coin"></i> Broker Payment Information</h5>
                        <div class="row g-3">
                            <div class="col-12 col-md-4">
                                <label class="text-muted small fw-semibold text-uppercase">Total Payments Made</label>
                                <p class="h5 text-success mb-0">₹<%= stats.totalPaymentsMade.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
                            </div>
                            <div class="col-12 col-md-4">
                                <label class="text-muted small fw-semibold text-uppercase">Pending Commission</label>
                                <p class="h5 text-danger mb-0">₹<%= stats.pendingCommission.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></p>
                            </div>
                            <div class="col-12 col-md-4">
                                <label class="text-muted small fw-semibold text-uppercase">Payment Completion</label>
                                <p class="h5 text-info mb-0"><%= stats.totalCommission > 0 ? ((stats.totalPaymentsMade / stats.totalCommission) * 100).toFixed(1) : 0 %>%</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Partner Performance -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-3"><i class="bi bi-person-badge"></i> Partner Performance</h5>
                        <% if (associateStats.length === 0) { %>
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> No partners in this team yet.
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Partner</th>
                                            <th class="text-center">Bookings</th>
                                            <th class="text-center">Registered</th>
                                            <th class="text-center">Unregistered</th>
                                            <th class="text-end">Commission</th>
                                            <th class="text-end">Paid</th>
                                            <th class="text-end">Pending</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% associateStats.forEach(stat => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= stat.associate.name %></strong>
                                                    <br>
                                                    <small class="text-muted"><%= stat.associate.brokerNo %></small>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-primary"><%= stat.totalBookings %></span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-success"><%= stat.registeredBookings %></span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-warning text-dark"><%= stat.unregisteredBookings %></span>
                                                </td>
                                                <td class="text-end">
                                                    ₹<%= stat.totalCommission.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                                </td>
                                                <td class="text-end text-success">
                                                    ₹<%= stat.totalPaid.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                                </td>
                                                <td class="text-end">
                                                    <span class="<%= stat.pendingCommission > 0 ? 'text-danger' : 'text-muted' %>">
                                                        ₹<%= stat.pendingCommission.toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/broker/view/<%= stat.associate.id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Team Bookings -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-3"><i class="bi bi-calendar-check"></i> Team Bookings</h5>
                        <% if (bookingsList.length === 0) { %>
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> No bookings found for this team.
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Booking No</th>
                                            <th>Date</th>
                                            <th>Project</th>
                                            <th>Customer</th>
                                            <th>Partner</th>
                                            <th>Plot</th>
                                            <th class="text-end">Amount</th>
                                            <th class="text-end">Commission</th>
                                            <th>Registry</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% bookingsList.forEach(booking => { %>
                                            <tr>
                                                <td><strong><%= booking.bookingNo %></strong></td>
                                                <td><small><%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %></small></td>
                                                <td><%= booking.project ? booking.project.projectName : 'N/A' %></td>
                                                <td>
                                                    <%= booking.customer ? booking.customer.applicantName : 'N/A' %>
                                                    <% if (booking.customer && booking.customer.mobileNo) { %>
                                                        <br><small class="text-muted"><%= booking.customer.mobileNo %></small>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <%= booking.broker ? booking.broker.name : 'N/A' %>
                                                    <% if (booking.broker && booking.broker.brokerNo) { %>
                                                        <br><small class="text-muted"><%= booking.broker.brokerNo %></small>
                                                    <% } %>
                                                </td>
                                                <td><%= booking.plotNo %></td>
                                                <td class="text-end">₹<%= parseFloat(booking.totalAmount).toLocaleString('en-IN') %></td>
                                                <td class="text-end">₹<%= parseFloat(booking.brokerCommission || 0).toLocaleString('en-IN') %></td>
                                                <td>
                                                    <% if (booking.registryCompleted) { %>
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle"></i> Done
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-clock"></i> Pending
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/booking/view/<%= booking.id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
