<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Teams</title>
</head>
<body class="bg-light">
    <%- include('../partials/page-header', { 
        title: 'Teams', 
        icon: 'bi-people-fill',
        backUrl: '/dashboard',
        actionUrl: '/team/create',
        actionText: 'New Team',
        actionIcon: 'bi-plus-circle'
    }) %>

    <div class="container my-4">
        <!-- Search & Filter -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/team" method="GET" id="filterForm">
                    <div class="row g-3 align-items-center">
                        <div class="col-12 col-md-6">
                            <input type="text" class="form-control" name="search" placeholder="Search by team no or name..." value="<%= search || '' %>">
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="showDeleted" name="showDeleted" value="true" <%= showDeleted ? 'checked' : '' %> onchange="this.form.submit()">
                                <label class="form-check-label" for="showDeleted">Show Deleted</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <% if (search || showDeleted) { %>
                                <a href="/team" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Teams List -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <% if (teams.length === 0) { %>
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No teams found. <a href="/team/create">Create a new team</a>.
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Team No</th>
                                    <th>Name</th>
                                    <th>Associates</th>
                                    <th>Total Bookings</th>
                                    <th>Registered</th>
                                    <th>Unregistered</th>
                                    <th>Commission</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% teams.forEach(team => { %>
                                    <tr class="<%= team.isDeleted ? 'table-secondary text-muted' : '' %>">
                                        <td><%= team.teamNo %></td>
                                        <td>
                                            <strong><%= team.name %></strong>
                                            <% if (team.description) { %>
                                                <br><small class="text-muted"><%= team.description.substring(0, 50) %><%= team.description.length > 50 ? '...' : '' %></small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                <%= team.associates.length %> Members
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">
                                                <%= team.dataValues.totalBookings || 0 %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">
                                                <%= team.dataValues.registeredBookings || 0 %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-warning text-dark">
                                                <%= team.dataValues.unregisteredBookings || 0 %>
                                            </span>
                                        </td>
                                        <td>
                                            â‚¹<%= (team.dataValues.totalCommission || 0).toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                        </td>
                                        <td>
                                            <% if (team.isDeleted) { %>
                                                <span class="badge bg-danger">Deleted</span>
                                            <% } else if (team.isActive) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/team/view/<%= team.id %>" class="btn btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <% if (!team.isDeleted) { %>
                                                    <a href="/team/edit/<%= team.id %>" class="btn btn-outline-warning" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
