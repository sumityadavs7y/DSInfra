<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teams</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .table-dark th {
            background-color: #212529 !important;
            user-select: none;
        }
        .table-dark th:hover {
            background-color: #2c3034 !important;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/page-header', { 
        title: 'Teams', 
        icon: 'bi-people-fill',
        backUrl: '/dashboard',
        actionUrl: '/team/create',
        actionText: 'New Team',
        actionIcon: 'bi-plus-circle'
    }) %>

    <div class="container my-4">
        <!-- Search & Filter -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/team" method="GET" id="filterForm">
                    <div class="row g-3 align-items-center">
                        <div class="col-12 col-md-6">
                            <input type="text" class="form-control" name="search" placeholder="Search by team no or name..." value="<%= search || '' %>">
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="showDeleted" name="showDeleted" value="true" <%= showDeleted ? 'checked' : '' %> onchange="this.form.submit()">
                                <label class="form-check-label" for="showDeleted">Show Deleted</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <% if (search || showDeleted) { %>
                                <a href="/team" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Teams List -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <% if (teams.length === 0) { %>
                    <div class="p-4">
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> No teams found. <a href="/team/create" class="alert-link">Create a new team</a>.
                        </div>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Team No</th>
                                    <th>Name</th>
                                    <th class="text-center">Associates</th>
                                    <th class="text-center">Total Bookings</th>
                                    <th class="text-center">Registered</th>
                                    <th class="text-center">Unregistered</th>
                                    <th class="text-end">Commission</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% teams.forEach(team => { %>
                                    <tr class="<%= team.isDeleted ? 'table-secondary' : '' %>">
                                        <td>
                                            <strong class="<%= team.isDeleted ? 'text-muted' : '' %>"><%= team.teamNo %></strong>
                                        </td>
                                        <td>
                                            <strong class="<%= team.isDeleted ? 'text-muted' : '' %>"><%= team.name %></strong>
                                            <% if (team.description) { %>
                                                <br><small class="text-muted"><%= team.description.substring(0, 50) %><%= team.description.length > 50 ? '...' : '' %></small>
                                            <% } %>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info">
                                                <i class="bi bi-people"></i> <%= team.associates.length %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">
                                                <%= team.dataValues.totalBookings || 0 %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-success">
                                                <%= team.dataValues.registeredBookings || 0 %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-warning text-dark">
                                                <%= team.dataValues.unregisteredBookings || 0 %>
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <strong>â‚¹<%= (team.dataValues.totalCommission || 0).toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></strong>
                                        </td>
                                        <td class="text-center">
                                            <% if (team.isDeleted) { %>
                                                <span class="badge bg-danger">Deleted</span>
                                            <% } else if (team.isActive) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a href="/team/view/<%= team.id %>" class="btn btn-outline-primary" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <% if (!team.isDeleted) { %>
                                                    <a href="/team/edit/<%= team.id %>" class="btn btn-outline-warning" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
            <% if (teams.length > 0) { %>
            <div class="card-footer bg-white border-top text-muted small">
                <i class="bi bi-info-circle"></i> Showing <%= teams.length %> team<%= teams.length !== 1 ? 's' : '' %>
            </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
