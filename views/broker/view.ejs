<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Broker <%= broker.brokerNo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <div>
                <a href="/broker" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <span class="navbar-brand mb-0 h1">Broker Details</span>
            </div>
            <div class="d-flex gap-2">
                <% if (!broker.isDeleted && userRole === 'admin') { %>
                <a href="/broker/<%= broker.id %>/edit" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> <span class="d-none d-sm-inline">Edit</span>
                </a>
                <form method="POST" action="/broker/<%= broker.id %>/delete" onsubmit="return confirm('Delete this broker?');">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> <span class="d-none d-sm-inline">Delete</span>
                    </button>
                </form>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <!-- Broker Info Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-8 mb-2 mb-md-0">
                                <h3 class="h4 mb-0 text-dark"><%= broker.brokerNo %></h3>
                            </div>
                            <div class="col-12 col-md-4 text-md-end">
                                <% if (broker.isDeleted) { %>
                                    <span class="badge bg-danger px-3 py-2">Deleted</span>
                                <% } else if (broker.isActive) { %>
                                    <span class="badge bg-success px-3 py-2">Active</span>
                                <% } else { %>
                                    <span class="badge bg-secondary px-3 py-2">Inactive</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Name</label>
                                <p class="h5 mb-0"><%= broker.name %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Mobile</label>
                                <p class="h5 mb-0"><%= broker.mobileNo %></p>
                            </div>
                            <% if (broker.email) { %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Email</label>
                                <p class="h5 mb-0"><%= broker.email %></p>
                            </div>
                            <% } %>
                            <% if (broker.aadhaarNo) { %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Aadhaar</label>
                                <p class="h5 mb-0"><%= broker.aadhaarNo %></p>
                            </div>
                            <% } %>
                            <% if (broker.panNo) { %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">PAN</label>
                                <p class="h5 mb-0"><%= broker.panNo %></p>
                            </div>
                            <% } %>
                            <% if (broker.address) { %>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Address</label>
                                <p class="h5 mb-0"><%= broker.address %></p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Statistics Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 text-center">
                            <div class="col-6 col-md-3">
                                <div class="p-3">
                                    <h2 class="text-primary mb-1"><%= stats.totalBookings %></h2>
                                    <small class="text-muted">Total Bookings</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="p-3">
                                    <h2 class="text-success mb-1"><%= stats.activeBookings %></h2>
                                    <small class="text-muted">Active Bookings</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="p-3">
                                    <h2 class="text-danger mb-1"><%= stats.cancelledBookings %></h2>
                                    <small class="text-muted">Cancelled</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="p-3">
                                    <h2 class="text-warning mb-1">₹<%= stats.totalCommission.toLocaleString('en-IN') %></h2>
                                    <small class="text-muted">Total Commission</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabs Navigation -->
                <ul class="nav nav-tabs mb-3" id="brokerTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="bookings-tab" data-bs-toggle="tab" data-bs-target="#bookings" type="button" role="tab">
                            <i class="bi bi-journal-text"></i> Bookings (<%= bookings.length %>)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="payments-tab" data-bs-toggle="tab" data-bs-target="#payments" type="button" role="tab">
                            <i class="bi bi-cash-coin"></i> Broker Payments (<%= brokerPayments ? brokerPayments.length : 0 %>)
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content" id="brokerTabContent">
                    <!-- Bookings Tab -->
                    <div class="tab-pane fade show active" id="bookings" role="tabpanel">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body p-4">
                                <h5 class="text-dark mb-3">
                                    <i class="bi bi-journal-text"></i> Broker Bookings
                                </h5>
                        <% if (bookings.length === 0) { %>
                            <p class="text-muted text-center py-3">No bookings yet</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Booking No</th>
                                            <th class="d-none d-md-table-cell">Date</th>
                                            <th>Customer</th>
                                            <th>Project</th>
                                            <th>Plot</th>
                                            <th class="d-none d-lg-table-cell">Commission</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% bookings.forEach(booking => { %>
                                            <tr>
                                                <td><strong><%= booking.bookingNo %></strong></td>
                                                <td class="d-none d-md-table-cell"><%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %></td>
                                                <td><%= booking.customer.applicantName %></td>
                                                <td><%= booking.project.projectName %></td>
                                                <td><%= booking.plotNo %></td>
                                                <td class="d-none d-lg-table-cell fw-bold text-warning">
                                                    ₹<%= parseFloat(booking.brokerCommission || 0).toLocaleString('en-IN') %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= booking.status === 'Active' ? 'success' : 'danger' %>">
                                                        <%= booking.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/booking/<%= booking.id %>" class="btn btn-sm btn-dark">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                    <tfoot class="table-light">
                                        <tr>
                                            <th colspan="5" class="text-end">Total Commission:</th>
                                            <th class="d-none d-lg-table-cell fw-bold text-warning">
                                                ₹<%= stats.totalCommission.toLocaleString('en-IN') %>
                                            </th>
                                            <th colspan="2" class="d-lg-none fw-bold text-warning">
                                                ₹<%= stats.totalCommission.toLocaleString('en-IN') %>
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Broker Payments Tab -->
                    <div class="tab-pane fade" id="payments" role="tabpanel">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="text-dark mb-0">
                                        <i class="bi bi-cash-coin"></i> Broker Payment Summary
                                    </h5>
                                    <% if (!broker.isDeleted) { %>
                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addBrokerPaymentModal">
                                        <i class="bi bi-plus-circle"></i> Add Broker Payment
                                    </button>
                                    <% } %>
                                </div>
                        <div class="row g-3">
                            <div class="col-6 col-md-4">
                                <div class="p-3 bg-light rounded">
                                    <label class="text-muted small d-block">Total Commission Due</label>
                                    <h4 class="mb-0 text-warning">₹<%= stats.totalCommission.toLocaleString('en-IN') %></h4>
                                </div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="p-3 bg-light rounded">
                                    <label class="text-muted small d-block">Paid to Broker</label>
                                    <h4 class="mb-0 text-success">₹<%= stats.totalCommissionPaid.toLocaleString('en-IN') %></h4>
                                </div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="p-3 bg-light rounded">
                                    <label class="text-muted small d-block">Pending to Pay</label>
                                    <h4 class="mb-0 text-danger">₹<%= stats.commissionRemaining.toLocaleString('en-IN') %></h4>
                                </div>
                            </div>
                                </div>
                            </div>
                        </div>

                        <!-- Broker Payment History -->
                        <% if (brokerPayments && brokerPayments.length > 0) { %>
                        <div class="card border-0 shadow-sm mt-4">
                            <div class="card-body p-4">
                                <h5 class="text-dark mb-3">
                                    <i class="bi bi-clock-history"></i> Broker Payment History
                                </h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Payment No</th>
                                        <th class="d-none d-md-table-cell">Date</th>
                                        <th>Amount</th>
                                        <th class="d-none d-lg-table-cell">Mode</th>
                                        <th class="d-none d-lg-table-cell">Transaction No</th>
                                        <th>Remarks</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% brokerPayments.forEach(payment => { %>
                                        <tr>
                                            <td><strong><%= payment.paymentNo %></strong></td>
                                            <td class="d-none d-md-table-cell"><%= new Date(payment.paymentDate).toLocaleDateString('en-IN') %></td>
                                            <td class="fw-bold text-success">₹<%= parseFloat(payment.paymentAmount).toLocaleString('en-IN') %></td>
                                            <td class="d-none d-lg-table-cell"><%= payment.paymentMode %></td>
                                            <td class="d-none d-lg-table-cell"><small><%= payment.transactionNo || '-' %></small></td>
                                            <td><small><%= payment.remarks || '-' %></small></td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary me-1" onclick="editPayment(<%= payment.id %>)">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deletePayment(<%= payment.id %>)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="2" class="text-end">Total Paid to Broker:</th>
                                        <th class="fw-bold text-success">₹<%= stats.totalCommissionPaid.toLocaleString('en-IN') %></th>
                                        <th colspan="4"></th>
                                    </tr>
                                </tfoot>
                            </table>
                                </div>
                            </div>
                        </div>
                        <% } else { %>
                        <div class="card border-0 shadow-sm mt-4">
                            <div class="card-body p-4">
                                <h5 class="text-dark mb-3">
                                    <i class="bi bi-clock-history"></i> Broker Payment History
                                </h5>
                                <p class="text-muted text-center py-3">No broker payments made yet</p>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Broker Payment Modal -->
    <div class="modal fade" id="addBrokerPaymentModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-cash-coin"></i> Add Broker Commission Payment
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="brokerPaymentForm">
                    <div class="modal-body">
                        <input type="hidden" name="brokerId" value="<%= broker.id %>">

                        <div class="alert alert-info mb-3">
                            <small><i class="bi bi-info-circle"></i> Broker payments are independent transactions to the broker, not tied to any specific booking</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Payment Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" name="paymentDate" id="paymentDate" 
                                   value="<%= new Date().toISOString().split('T')[0] %>" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Broker Payment Amount <span class="text-danger">*</span></label>
                            <input type="number" step="0.01" class="form-control" name="paymentAmount" 
                                   id="paymentAmount" placeholder="Enter payment amount to broker" required>
                            <small class="text-muted">Amount you are paying to the broker for their commission</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Payment Mode <span class="text-danger">*</span></label>
                            <select class="form-select" name="paymentMode" required>
                                <option value="Cash">Cash</option>
                                <option value="Cheque">Cheque</option>
                                <option value="Online Transfer" selected>Online Transfer</option>
                                <option value="NEFT/RTGS">NEFT/RTGS</option>
                                <option value="UPI">UPI</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Transaction No</label>
                            <input type="text" class="form-control" name="transactionNo" 
                                   placeholder="Enter transaction number">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Remarks</label>
                            <textarea class="form-control" name="remarks" rows="2" 
                                      placeholder="Any additional notes"></textarea>
                        </div>

                        <div id="paymentError" class="alert alert-danger d-none"></div>
                        <div id="paymentSuccess" class="alert alert-success d-none"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Save Broker Payment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Broker Payment Modal -->
    <div class="modal fade" id="editBrokerPaymentModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editBrokerPaymentForm">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-pencil-square"></i> Edit Broker Payment
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="editPaymentId" name="paymentId">
                        
                        <div class="alert alert-info mb-3">
                            <small><i class="bi bi-info-circle"></i> Editing payment: <strong id="editPaymentNo"></strong></small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Payment Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" name="paymentDate" id="editPaymentDate" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Broker Payment Amount <span class="text-danger">*</span></label>
                            <input type="number" step="0.01" class="form-control" name="paymentAmount" 
                                   id="editPaymentAmount" placeholder="Enter payment amount to broker" required>
                            <small class="text-muted">Amount you are paying to the broker</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Payment Mode <span class="text-danger">*</span></label>
                            <select class="form-select" name="paymentMode" id="editPaymentMode" required>
                                <option value="Cash">Cash</option>
                                <option value="Cheque">Cheque</option>
                                <option value="Online Transfer">Online Transfer</option>
                                <option value="NEFT/RTGS">NEFT/RTGS</option>
                                <option value="UPI">UPI</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Transaction No</label>
                            <input type="text" class="form-control" name="transactionNo" id="editTransactionNo"
                                   placeholder="Enter transaction number">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Remarks</label>
                            <textarea class="form-control" name="remarks" id="editRemarks" rows="2" 
                                      placeholder="Any additional notes"></textarea>
                        </div>

                        <div id="editPaymentError" class="alert alert-danger d-none"></div>
                        <div id="editPaymentSuccess" class="alert alert-success d-none"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Update Payment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Handle form submission
        document.getElementById('brokerPaymentForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            const errorDiv = document.getElementById('paymentError');
            const successDiv = document.getElementById('paymentSuccess');
            errorDiv.classList.add('d-none');
            successDiv.classList.add('d-none');

            try {
                const response = await fetch('/broker-payment/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    successDiv.textContent = result.message;
                    successDiv.classList.remove('d-none');
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    errorDiv.textContent = result.message || 'An error occurred';
                    errorDiv.classList.remove('d-none');
                }
            } catch (error) {
                errorDiv.textContent = 'Error: ' + error.message;
                errorDiv.classList.remove('d-none');
            }
        });

        // Reset modal when closed
        document.getElementById('addBrokerPaymentModal').addEventListener('hidden.bs.modal', function() {
            document.getElementById('brokerPaymentForm').reset();
            document.getElementById('paymentDate').value = '<%= new Date().toISOString().split("T")[0] %>';
            document.getElementById('paymentError').classList.add('d-none');
            document.getElementById('paymentSuccess').classList.add('d-none');
        });

        // Edit payment function
        async function editPayment(paymentId) {
            try {
                const response = await fetch(`/broker-payment/${paymentId}`);
                const result = await response.json();

                if (result.success) {
                    const payment = result.payment;
                    document.getElementById('editPaymentId').value = payment.id;
                    document.getElementById('editPaymentNo').textContent = payment.paymentNo;
                    document.getElementById('editPaymentDate').value = payment.paymentDate;
                    document.getElementById('editPaymentAmount').value = payment.paymentAmount;
                    document.getElementById('editPaymentMode').value = payment.paymentMode;
                    document.getElementById('editTransactionNo').value = payment.transactionNo || '';
                    document.getElementById('editRemarks').value = payment.remarks || '';

                    // Show modal
                    const modal = new bootstrap.Modal(document.getElementById('editBrokerPaymentModal'));
                    modal.show();
                } else {
                    alert('Error loading payment: ' + result.message);
                }
            } catch (error) {
                alert('Error loading payment: ' + error.message);
            }
        }

        // Handle edit form submission
        document.getElementById('editBrokerPaymentForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const paymentId = document.getElementById('editPaymentId').value;
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            const errorDiv = document.getElementById('editPaymentError');
            const successDiv = document.getElementById('editPaymentSuccess');
            errorDiv.classList.add('d-none');
            successDiv.classList.add('d-none');

            try {
                const response = await fetch(`/broker-payment/${paymentId}/edit`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    successDiv.textContent = result.message;
                    successDiv.classList.remove('d-none');
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    errorDiv.textContent = result.message || 'An error occurred';
                    errorDiv.classList.remove('d-none');
                }
            } catch (error) {
                errorDiv.textContent = 'Error: ' + error.message;
                errorDiv.classList.remove('d-none');
            }
        });

        // Reset edit modal when closed
        document.getElementById('editBrokerPaymentModal').addEventListener('hidden.bs.modal', function() {
            document.getElementById('editBrokerPaymentForm').reset();
            document.getElementById('editPaymentError').classList.add('d-none');
            document.getElementById('editPaymentSuccess').classList.add('d-none');
        });

        // Delete payment function
        async function deletePayment(paymentId) {
            if (!confirm('Are you sure you want to delete this broker payment? This action cannot be undone.')) {
                return;
            }

            try {
                const response = await fetch(`/broker-payment/${paymentId}/delete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Error deleting payment: ' + error.message);
            }
        }
    </script>
</body>
</html>

