<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Broker <%= broker.brokerNo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <div>
                <a href="/broker" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <span class="navbar-brand mb-0 h1">Broker Details</span>
            </div>
            <div class="d-flex gap-2">
                <% if (!broker.isDeleted && userRole === 'admin') { %>
                <a href="/broker/<%= broker.id %>/edit" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> <span class="d-none d-sm-inline">Edit</span>
                </a>
                <form method="POST" action="/broker/<%= broker.id %>/delete" onsubmit="return confirm('Delete this broker?');">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> <span class="d-none d-sm-inline">Delete</span>
                    </button>
                </form>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <!-- Broker Info Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-8 mb-2 mb-md-0">
                                <h3 class="h4 mb-0 text-dark"><%= broker.brokerNo %></h3>
                            </div>
                            <div class="col-12 col-md-4 text-md-end">
                                <% if (broker.isDeleted) { %>
                                    <span class="badge bg-danger px-3 py-2">Deleted</span>
                                <% } else if (broker.isActive) { %>
                                    <span class="badge bg-success px-3 py-2">Active</span>
                                <% } else { %>
                                    <span class="badge bg-secondary px-3 py-2">Inactive</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Name</label>
                                <p class="h5 mb-0"><%= broker.name %></p>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Mobile</label>
                                <p class="h5 mb-0"><%= broker.mobileNo %></p>
                            </div>
                            <% if (broker.email) { %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Email</label>
                                <p class="h5 mb-0"><%= broker.email %></p>
                            </div>
                            <% } %>
                            <% if (broker.aadhaarNo) { %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">Aadhaar</label>
                                <p class="h5 mb-0"><%= broker.aadhaarNo %></p>
                            </div>
                            <% } %>
                            <% if (broker.panNo) { %>
                            <div class="col-12 col-md-6">
                                <label class="text-muted small fw-semibold text-uppercase">PAN</label>
                                <p class="h5 mb-0"><%= broker.panNo %></p>
                            </div>
                            <% } %>
                            <% if (broker.address) { %>
                            <div class="col-12">
                                <label class="text-muted small fw-semibold text-uppercase">Address</label>
                                <p class="h5 mb-0"><%= broker.address %></p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Statistics Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 text-center">
                            <div class="col-6 col-md-3">
                                <div class="p-3">
                                    <h2 class="text-primary mb-1"><%= stats.totalBookings %></h2>
                                    <small class="text-muted">Total Bookings</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="p-3">
                                    <h2 class="text-success mb-1"><%= stats.activeBookings %></h2>
                                    <small class="text-muted">Active Bookings</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="p-3">
                                    <h2 class="text-info mb-1"><%= stats.completedBookings %></h2>
                                    <small class="text-muted">Completed</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="p-3">
                                    <h2 class="text-warning mb-1">₹<%= stats.totalCommission.toLocaleString('en-IN') %></h2>
                                    <small class="text-muted">Total Commission</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bookings List -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="text-dark mb-3">
                            <i class="bi bi-journal-text"></i> Broker Bookings (<%= bookings.length %>)
                        </h5>
                        <% if (bookings.length === 0) { %>
                            <p class="text-muted text-center py-3">No bookings yet</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Booking No</th>
                                            <th class="d-none d-md-table-cell">Date</th>
                                            <th>Customer</th>
                                            <th>Project</th>
                                            <th>Plot</th>
                                            <th class="d-none d-lg-table-cell">Commission</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% bookings.forEach(booking => { %>
                                            <tr>
                                                <td><strong><%= booking.bookingNo %></strong></td>
                                                <td class="d-none d-md-table-cell"><%= new Date(booking.bookingDate).toLocaleDateString('en-IN') %></td>
                                                <td><%= booking.customer.applicantName %></td>
                                                <td><%= booking.project.projectName %></td>
                                                <td><%= booking.plotNo %></td>
                                                <td class="d-none d-lg-table-cell fw-bold text-warning">
                                                    ₹<%= parseFloat(booking.brokerCommission || 0).toLocaleString('en-IN') %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= booking.status === 'Active' ? 'success' : booking.status === 'Completed' ? 'info' : 'danger' %>">
                                                        <%= booking.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/booking/<%= booking.id %>" class="btn btn-sm btn-dark">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                    <tfoot class="table-light">
                                        <tr>
                                            <th colspan="5" class="text-end">Total Commission:</th>
                                            <th class="d-none d-lg-table-cell fw-bold text-warning">
                                                ₹<%= stats.totalCommission.toLocaleString('en-IN') %>
                                            </th>
                                            <th colspan="2" class="d-lg-none fw-bold text-warning">
                                                ₹<%= stats.totalCommission.toLocaleString('en-IN') %>
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

