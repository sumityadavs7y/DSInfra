<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brokers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <div>
                <a href="/dashboard" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <span class="navbar-brand mb-0 h1">Brokers</span>
            </div>
            <a href="/broker/create" class="btn btn-light">
                <i class="bi bi-person-plus"></i> <span class="d-none d-sm-inline">New Broker</span>
            </a>
        </div>
    </nav>

    <div class="container my-4">
        <!-- Search & Filter -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/broker" method="GET" id="filterForm">
                    <!-- Search Row -->
                    <div class="row g-3 align-items-center mb-3">
                        <div class="col-12 col-md-6">
                            <input type="text" class="form-control" name="search" placeholder="Search by broker no, name, mobile, email..." value="<%= search || '' %>">
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="showDeleted" name="showDeleted" value="true" <%= showDeleted ? 'checked' : '' %> onchange="this.form.submit()">
                                <label class="form-check-label" for="showDeleted">Show Deleted</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <% if (search || showDeleted || paymentDateFrom || paymentDateTo) { %>
                                <a href="/broker" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Date Filter Row -->
                    <div class="row g-2 align-items-end">
                        <div class="col-12 col-md-5">
                            <label class="form-label fw-bold text-primary small mb-1">
                                <i class="bi bi-calendar-event"></i> Payment Date From
                            </label>
                            <input type="date" class="form-control form-control-sm" 
                                   name="paymentDateFrom" value="<%= paymentDateFrom %>"
                                   onchange="document.getElementById('filterForm').submit()">
                        </div>
                        <div class="col-12 col-md-5">
                            <label class="form-label fw-bold text-primary small mb-1">
                                <i class="bi bi-calendar-event"></i> Payment Date To
                            </label>
                            <input type="date" class="form-control form-control-sm" 
                                   name="paymentDateTo" value="<%= paymentDateTo %>"
                                   onchange="document.getElementById('filterForm').submit()">
                        </div>
                        <div class="col-12 col-md-2">
                            <% if (paymentDateFrom || paymentDateTo) { %>
                            <small class="text-muted d-block"><i class="bi bi-funnel-fill text-warning"></i> Filtering Payments</small>
                            <% } else { %>
                            <small class="text-muted d-block">Filter by payment date</small>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Cumulative Broker Payment Statistics -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h5 class="text-dark mb-4">
                    <i class="bi bi-cash-coin"></i> Overall Broker Payment Summary
                </h5>
                
                <div class="row g-3 mb-4">
                    <div class="col-12">
                        <h6 class="text-muted mb-3"><i class="bi bi-file-earmark-check"></i> Registry Completed Bookings</h6>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 bg-success bg-opacity-10 border border-success rounded">
                            <label class="text-muted small d-block">Bookings</label>
                            <h5 class="mb-0 text-success"><%= stats.registeredBookingsCount %></h5>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 bg-success bg-opacity-10 border border-success rounded">
                            <label class="text-muted small d-block">Total Commission</label>
                            <h5 class="mb-0 text-success">₹<%= stats.totalCommissionRegistered.toLocaleString('en-IN') %></h5>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 bg-primary bg-opacity-10 border border-primary rounded">
                            <label class="text-muted small d-block">
                                Already Paid
                                <% if (paymentDateFrom || paymentDateTo) { %>
                                    <i class="bi bi-funnel-fill text-warning" title="Filtered"></i>
                                <% } %>
                            </label>
                            <% if (paymentDateFrom || paymentDateTo) { %>
                                <h5 class="mb-0 text-primary">₹<%= stats.filteredPaymentTotal.toLocaleString('en-IN') %></h5>
                                <small class="text-muted d-block">of ₹<%= stats.totalCommissionPaid.toLocaleString('en-IN') %> total</small>
                            <% } else { %>
                                <h5 class="mb-0 text-primary">₹<%= stats.totalCommissionPaid.toLocaleString('en-IN') %></h5>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="p-3 bg-danger bg-opacity-10 border border-danger rounded">
                            <label class="text-muted small d-block">Pending to Pay</label>
                            <h5 class="mb-0 text-danger">₹<%= stats.commissionRemainingRegistered.toLocaleString('en-IN') %></h5>
                        </div>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-12">
                        <h6 class="text-muted mb-3"><i class="bi bi-file-earmark-x"></i> Non-Registered Bookings</h6>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="p-3 bg-warning bg-opacity-10 border border-warning rounded">
                            <label class="text-muted small d-block">Bookings</label>
                            <h5 class="mb-0 text-warning"><%= stats.nonRegisteredBookingsCount %></h5>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="p-3 bg-warning bg-opacity-10 border border-warning rounded">
                            <label class="text-muted small d-block">Total Commission</label>
                            <h5 class="mb-0 text-warning">₹<%= stats.totalCommissionNonRegistered.toLocaleString('en-IN') %></h5>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="p-3 bg-info bg-opacity-10 border border-info rounded">
                            <label class="text-muted small d-block">Total (All Bookings)</label>
                            <h5 class="mb-0 text-info">₹<%= stats.totalCommission.toLocaleString('en-IN') %></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Brokers Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <% if (brokers.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="bi bi-person-x fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No brokers found</p>
                        <a href="/broker/create" class="btn btn-dark">
                            <i class="bi bi-person-plus"></i> Add First Broker
                        </a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Broker No</th>
                                    <th>Name</th>
                                    <th class="d-none d-md-table-cell">Mobile</th>
                                    <th class="d-none d-lg-table-cell">Email</th>
                                    <th class="d-none d-xl-table-cell">
                                        Payments Done
                                        <% if (paymentDateFrom || paymentDateTo) { %>
                                            <i class="bi bi-funnel-fill text-warning" title="Filtered by date"></i>
                                        <% } %>
                                    </th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% brokers.forEach(broker => { %>
                                    <tr class="<%= broker.isDeleted ? 'table-danger opacity-75' : '' %>">
                                        <td><strong><%= broker.brokerNo %></strong></td>
                                        <td><%= broker.name %></td>
                                        <td class="d-none d-md-table-cell"><%= broker.mobileNo %></td>
                                        <td class="d-none d-lg-table-cell"><%= broker.email || 'N/A' %></td>
                                        <td class="d-none d-xl-table-cell">
                                            <strong class="text-success">₹<%= (broker.totalPayments || 0).toLocaleString('en-IN') %></strong>
                                        </td>
                                        <td>
                                            <% if (broker.isDeleted) { %>
                                                <span class="badge bg-danger">Deleted</span>
                                            <% } else if (broker.isActive) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/broker/<%= broker.id %>" class="btn btn-dark">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <% if (!broker.isDeleted) { %>
                                                <a href="/broker/<%= broker.id %>/edit" class="btn btn-warning">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <% if (userRole === 'admin') { %>
                                                <form method="POST" action="/broker/<%= broker.id %>/delete" style="display:inline;" 
                                                      onsubmit="return confirm('Delete this broker? (Bookings will remain intact)');">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                                <% } %>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

