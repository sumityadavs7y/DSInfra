<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brokers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <div>
                <a href="/dashboard" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <span class="navbar-brand mb-0 h1">Brokers</span>
            </div>
            <a href="/broker/create" class="btn btn-light">
                <i class="bi bi-person-plus"></i> <span class="d-none d-sm-inline">New Broker</span>
            </a>
        </div>
    </nav>

    <div class="container my-4">
        <!-- Search & Filter -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/broker" method="GET" class="row g-3 align-items-center">
                    <div class="col-12 col-md-6">
                        <input type="text" class="form-control" name="search" placeholder="Search by broker no, name, mobile, email..." value="<%= search || '' %>">
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="showDeleted" name="showDeleted" value="true" <%= showDeleted ? 'checked' : '' %> onchange="this.form.submit()">
                            <label class="form-check-label" for="showDeleted">Show Deleted</label>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="bi bi-search"></i> Search
                            </button>
                            <% if (search || showDeleted) { %>
                            <a href="/broker" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i>
                            </a>
                            <% } %>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Brokers Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <% if (brokers.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="bi bi-person-x fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No brokers found</p>
                        <a href="/broker/create" class="btn btn-dark">
                            <i class="bi bi-person-plus"></i> Add First Broker
                        </a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Broker No</th>
                                    <th>Name</th>
                                    <th class="d-none d-md-table-cell">Mobile</th>
                                    <th class="d-none d-lg-table-cell">Email</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% brokers.forEach(broker => { %>
                                    <tr class="<%= broker.isDeleted ? 'table-danger opacity-75' : '' %>">
                                        <td><strong><%= broker.brokerNo %></strong></td>
                                        <td><%= broker.name %></td>
                                        <td class="d-none d-md-table-cell"><%= broker.mobileNo %></td>
                                        <td class="d-none d-lg-table-cell"><%= broker.email || 'N/A' %></td>
                                        <td>
                                            <% if (broker.isDeleted) { %>
                                                <span class="badge bg-danger">Deleted</span>
                                            <% } else if (broker.isActive) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/broker/<%= broker.id %>" class="btn btn-dark">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <% if (!broker.isDeleted) { %>
                                                <a href="/broker/<%= broker.id %>/edit" class="btn btn-warning">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <% if (userRole === 'admin') { %>
                                                <form method="POST" action="/broker/<%= broker.id %>/delete" style="display:inline;" 
                                                      onsubmit="return confirm('Delete this broker? (Bookings will remain intact)');">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                                <% } %>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

